<div class="p-6 mt-8 mb-32 md:mt-32">
  <div class="container flex max-w-sm mx-auto mt-4 bg-white rounded-lg shadow md:mt-8">
    <div class="w-full p-8 text-center">
      <h1 class="text-2xl font-bold text-gray-900"><%= t('.title') %></h1>
      <div id="clearance" class="password-reset">
        <div class="mb-4">
          <span class="text-base text-gray-600">
            <%= t('.description') %>
          </span>
        </div>
        <%= simple_form_for(:password, url: passwords_path) do |f| %>
          <%= f.input(:email, input_html: { class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-gray-200 shadow-inner' }, label_html: { class: 'text-gray-700 text-sm font-bold' },
            label: t('helpers.label.password.email')) %>
          <div class="mt-6">
            <%= f.button(:submit, class: "w-full bg-gray-800 hover:bg-gray-500 text-white text-sm h-10 font-semibold rounded") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
