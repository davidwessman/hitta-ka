<div class="container mx-auto">
	<div class="w-full mx-auto mt-8 md:mt-12 lg:mt-20 xl:mt-24 h-screen">
		<div class="w-3/4 mx-auto text-center">
			<h1 class="text-3xl md:text-5xl font-sans font-bold text-blue-900">
				<%= t('.how_can_we_help_you?') %>
			</h1>
			<p class="font-medium text-gray-600 mt-8">
				<%= t('.choose_an_appropriate_category_below_and_we_will_contact_you_as_soon_as_possible') %>
			</p>
		</div>
		<div class="w-full mx-auto">
			<div class="px-2 mt-16">
				<div class="flex flex-wrap -mx-8 bg-gray-200">
					<div class="w-5/6 md:w-1/3 mx-auto md:mt-0 px-8">
						<div class="">
							<%= link_to(support_error_path, class: 'box shadow-xl h-56') do %>
								<div class="mt-4 ml-2 mb-4">
									<figure class="media-left">
										<span class="icon has-text-primary">
										<i class="fas fa-2x fa-tools"></i>
										</span>
									</figure>
									<h1 class="text-xl font-sans font-bold text-blue-900 mt-2">
										<%= t('.website_issues') %>
									</h1>
									<p class="font-medium mt-8">
										<%= t('.have_you_found_any_errors_on_the_website_or_in_the_documentation') %>
									</p>
								</div>
							<% end %>
						</div>
					</div>
					<div class="w-5/6 md:w-1/3 mx-auto mt-8 md:mt-0 px-8">
						<div class="">
							<%= link_to(support_general_path, class: 'box shadow-xl h-56') do %>
								<div class="mt-4 ml-2 mb-4">
									<figure class="media-left">
										<span class="icon has-text-primary">
										<i class="fas fa-2x fa-lightbulb"></i>
										</span>
									</figure>
									<h1 class="text-xl font-sans font-bold text-blue-900 mt-2">
										<%= t('.general_support') %>
									</h1>
									<p class="font-medium mt-8">
										<%= t('.is_there_something_that_you_need_help_with_contact_us') %>
									</p>
								</div>
							<% end %>
						</div>
					</div>
					<div class="w-5/6 md:w-1/3 mx-auto mt-8 md:mt-0 px-8 mb-20 md:mb-0">
						<div class="">
							<%= link_to(support_improvement_path, class: 'box shadow-xl h-56') do %>
								<div class="mt-4 ml-2 mb-4">
									<figure class="media-left">
										<span class="icon has-text-primary">
										<i class="fas fa-2x fa-headphones-alt"></i>
										</span>
									</figure>
									<h1 class="text-xl font-sans font-bold text-blue-900 mt-2">
										<%= t('.improvements') %>
									</h1>
									<p class="font-medium mt-8">
										<%= t('.do_you_have_any_suggestions_how_we_can_improve') %>
									</p>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
  	</div>
</div>
