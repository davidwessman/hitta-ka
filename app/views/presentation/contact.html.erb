<div class="container mx-auto">
	<div class="w-full mx-auto mt-8 md:mt-12 lg:mt-20 xl:mt-24">
		<div class="w-full mx-auto text-center">
			<h1 class="text-2xl md:text-4xl lg:text-5xl font-sans font-bold text-blue-900">
				<%= t('.how_can_we_help_you?') %>
			</h1>
			<div class="w-4/5 mx-auto">
				<p class="font-medium text-gray-600 mt-8">
					<%= t('.choose_an_appropriate_category_below_and_we_will_contact_you_as_soon_as_possible') %>
				</p>
			</div>
		</div>
		<div class="w-11/12 md:w-full mx-auto">
			<div class="px-2 mt-8 md:mt-12">
				<div class="flex flex-wrap mx-0 md:-mx-8">
					<div class="w-11/12 lg:w-1/3 max-w-xl mx-auto px-0 md:px-8">
						<div class="">
							<%= link_to(support_error_path, class: 'box shadow-xl h-56 hover:bg-blue-500 hover:text-white') do %>
								<div class="mt-4 ml-2 mb-4">
									<figure class="media-left">
										<span class="icon text-blue-500 hover:text-white">
										<i class="fas fa-2x fa-tools"></i>
										</span>
									</figure>
									<h1 class="text-xl font-sans font-bold text-blue-900 mt-2">
										<%= t('.website_issues') %>
									</h1>
									<p class="font-medium mt-8">
										<%= t('.have_you_found_any_errors_on_the_website_or_in_the_documentation') %>
									</p>
								</div>
							<% end %>
						</div>
					</div>
					<div class="w-11/12 lg:w-1/3 max-w-xl mx-auto mt-8 lg:mt-0 px-0 md:px-8">
						<div class="">
							<%= link_to(support_general_path, class: 'box shadow-xl h-56') do %>
								<div class="mt-4 ml-2 mb-4">
									<figure class="media-left">
										<span class="icon text-blue-500">
										<i class="fas fa-2x fa-lightbulb"></i>
										</span>
									</figure>
									<h1 class="text-xl font-sans font-bold text-blue-900 mt-2">
										<%= t('.general_support') %>
									</h1>
									<p class="font-medium mt-8">
										<%= t('.is_there_something_that_you_need_help_with_contact_us') %>
									</p>
								</div>
							<% end %>
						</div>
					</div>
					<div class="w-11/12 lg:w-1/3 max-w-xl mx-auto mt-8 lg:mt-0 px-0 md:px-8 mb-20 lg:mb-0">
						<div class="">
							<%= link_to(support_improvement_path, class: 'box shadow-xl h-56') do %>
								<div class="mt-4 ml-2 mb-4">
									<figure class="media-left">
										<span class="icon text-blue-500">
										<i class="fas fa-2x fa-headphones-alt"></i>
										</span>
									</figure>
									<h1 class="text-xl font-sans font-bold text-blue-900 mt-2">
										<%= t('.improvements') %>
									</h1>
									<p class="font-medium mt-8">
										<%= t('.do_you_have_any_suggestions_how_we_can_improve') %>
									</p>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
  	</div>
</div>
