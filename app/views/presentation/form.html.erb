<div class="container h-screen mx-auto bg-grey-200">
  <div class="w-full mx-auto mt-8 md:mt-16 xl:mt-24">
    <div class="max-w-2xl mx-auto text-center">
      <h1 class="font-sans text-2xl font-medium text-blue-900 sm:text-3xl md:text-5xl">
        Beskriv ert projekt så noggrant som möjligt!
      </h1>
    </div>
    <div class="w-full mx-auto">
      <div class="max-w-xl mx-auto mt-8 md:mt-16">
        <div class="w-11/12 mx-auto mb-32">
          <form class="px-8 pt-6 pb-8 bg-white rounded shadow-xl">
            <div class="mb-4">
              <label class="text-lg font-medium text-gray-800" for="name">
                <%= t('.name') %>
              </label>
              <input class="w-full px-3 py-2 mt-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Vad heter du?">
            </div>
            <div class="mb-6">
              <label class="text-lg font-medium text-gray-800" for="email">
                <%= t('.email') %>
              </label>
              <input class="w-full px-3 py-2 mt-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="name@email.com">
            </div>
            <div class="mb-6">
              <label class="text-lg font-medium text-gray-800" for="email">
                <%= t('.project_type') %>
              </label>
              <div class="control is-expanded">
                <div class="select is-fullwidth">
                  <select name="projectType">
                    <option>---</option>
                    <option value="Nyproduktion">Nyproduktion</option>
                    <option value="Renovering">Renovering</option>
                    <option value="Utbyggnad">Utbyggnad</option>
                    <option value="Industri">Industri</option>
                    <option value="Annat">Annat</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="mb-6">
              <label class="text-lg font-medium text-gray-800" for="email">
                <%= t('.describe_what_we_can_improve') %>
              </label>
              <textarea class="block w-full h-32 px-4 py-4 mt-2 mb-3 leading-tight bg-white border rounded shadow appearance-none text-grey-darker border-grey-lighter focus:outline-none focus:bg-white focus:border-grey" id="subject" type="message" placeholder="Förklara hur man hittar problemet..."></textarea>
            </div>
            <!-- <div class="mb-6 bg-gray-200">
              <input type="radio" name="radio" class="hidden"/>
              <label for="radio1" class="flex items-center text-xl cursor-pointer">
                 <span class="inline-block w-4 h-4 mr-2 bg-white border rounded-full border-grey flex-no-shrink"></span>
                 Nyproduktion
              </label>
            </div> -->
            <div class="mb-6">
              <div class="px-2">
                <div class="flex items-center -mx-2">
                  <div class="w-1/2 h-12 mr-2 text-center bg-gray-200 hover:bg-blue-600 hover:text-white focus:bg-blue-600">
                    <div class="mt-2 ml-3">
                      <input id="radio1" type="radio" name="radio" class="hidden"/>
                      <label for="radio1" class="flex items-center text-lg cursor-pointer">
                        <span class="inline-block w-4 h-4 mr-3 bg-white border rounded-full border-grey flex-no-shrink"></span>
                        Nyproduktion
                      </label>
                    </div>
                  </div>
                  <div class="w-1/2 mr-2 text-center bg-gray-200 hover:bg-blue-600 hover:text-white">
                    <div class="mt-2 ml-3">
                      <input id="radio2" type="radio" name="radio" class="hidden"/>
                      <label for="radio2" class="flex items-center text-lg cursor-pointer">
                        <span class="inline-block w-4 h-4 mr-3 bg-white border rounded-full border-grey flex-no-shrink"></span>
                        Renovering
                      </label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="flex items-center justify-center">
              <button class="w-full py-2 font-bold text-white bg-blue-500 rounded opacity-50 cursor-not-allowed hover:bg-blue-700 focus:outline-none focus:shadow-outline" type="button">
                <%= t('.send') %>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
