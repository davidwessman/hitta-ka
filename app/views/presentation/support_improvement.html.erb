<div class="container mx-auto bg-grey-200">
  <div class="w-full mx-auto mt-8 md:mt-16 xl:mt-24">
    <div class="w-full mx-auto text-center">
      <h1 class="font-sans text-xl font-medium text-gray-200 sm:text-3xl md:text-4xl">
        <%= t('.how can we improve?') %>
      </h1>
      <p class="mt-4 text-sm font-bold text-blue-500">
        <%= t('.improvement') %>
      </p>
    </div>
    <div class="w-full mx-auto">
      <div class="max-w-xl mx-auto mt-8 md:mt-16">
        <div class="w-11/12 mx-auto mb-32">
          <form class="px-8 pt-6 pb-8 bg-white rounded shadow-xl">
            <div class="mb-4">
              <label class="text-lg font-medium text-gray-800" for="name">
                <%= t('.name') %>
              </label>
              <input class="w-full px-3 py-2 mt-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Vad heter du?">
            </div>
            <div class="mb-6">
              <label class="text-lg font-medium text-gray-800" for="email">
                <%= t('.email') %>
              </label>
              <input class="w-full px-3 py-2 mt-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="name@email.com">
            </div>
            <div class="mb-6">
              <label class="text-lg font-medium text-gray-800" for="email">
                <%= t('.what_page') %>
              </label>
              <input class="w-full px-3 py-2 mt-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Skriv in URL:n">
            </div>
            <div class="mb-6">
              <label class="text-lg font-medium text-gray-800" for="email">
                <%= t('.describe_what_we_can_improve') %>
              </label>
              <textarea class="block w-full h-32 px-4 py-4 mt-2 mb-3 leading-tight bg-white border rounded shadow appearance-none text-grey-darker border-grey-lighter focus:outline-none focus:bg-white focus:border-grey" id="subject" type="message" placeholder="FÃ¶rklara hur man hittar problemet..."></textarea>
            </div>
            <div class="flex items-center justify-center">
              <button class="w-full py-2 font-bold text-white bg-blue-500 rounded opacity-50 cursor-not-allowed hover:bg-blue-700 focus:outline-none focus:shadow-outline" type="button">
                <%= t('.send') %>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
