<% task ||= Task.new %>
<% odd ||= false %>
<div class="border-b bg-white">
  <button class="w-full collapsible text-left hover:bg-blue-200">
    <div class="w-full flex py-3">
      <div class="w-20 md:w-24 flex justify-center items-center">
        <div class="rounded-full h-9 w-9 md:h-10 md:w-10 bg-blue-500 inline-flex items-center justify-center">
          <span class="icon text-white">
            <i class="fas fa-lg fa-home"></i>
          </span>
        </div>
      </div>
      <div class="w-full flex items-center">
        <div class="w-1/3 lg:w-1/4">
          <p class="text-sm md:text-base"><%= task.title %></p>
        </div>
        <div class="w-1/3 lg:w-1/4">
          <%= task_tag(task.status) %>
        </div>
        <div class="w-1/4 hidden lg:inline-block">
          <%= task.hours %>
        </div>
        <div class="w-1/3 lg:w-1/4 flex justify-center md:justify-start">
          <%= l(task.updated_at, format: "%Y-%m-%d %H:%M") if task.updated_at %>
        </div>
      </div>
      <div class="w-16 hidden md:flex items-center">
        <%= link_to(project_task_path(task.project, task)) do %>
          <span class="icon text-gray-600">
            <i class="fas fa-lg fa-plus"></i>
          </span>
        <% end %>
      </div>
    </div>
  </button>
</div>
