<% project ||= nil %>
<div class="text-center p-6 bg-white rounded">
  <div class="w-24 mx-auto mt-4 mb-4">
    <%= image_tag('no_timelogs.svg', alt: 'Builders')%>
  </div>
  <p class="text-2xl text-gray-900 font-medium mb-4"><%= t('.no_logged_tasks') %></p>
  <% if project %>
    <p class="text-gray max-w-xs mx-auto mb-6"><%= t('.create_project_task') %></p>
    <div class="text-center text-gray flex justify-center mt-8">
      <div class="flex hover:border-gray-400 hover:text-gray-400 font-medium">
        <%= link_to(new_project_task_path(project), class: 'bg-blue-600 border-blue-600 border hover:bg-blue-500 hover:border-blue-500 py-2 px-3 rounded text-white') do %>
          <%= t('.new_task') %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
