<%= form_with(model: [project, task], local: true, class: "w-full xl:max-w-3xl pb-8") do |form| %>
  <div class="flex flex-wrap -mx-2">
    <div class="w-full lg:w-2/3 px-2">
      <div class="flex flex-wrap bg-white rounded-md border border-gray-600">
        <div class="w-full h-12 bg-gray-800 px-3 py-2 rounded-t flex items-center">
          <h1 class="text-white font-semibold font-semibold text-xl xl:text-2xl"><%= t('.new_task') %></h1>
        </div>
        <div class="w-full mt-2 px-4 py-2 lg:px-8 lg:py-4">
          <div class="flex flex-wrap -mx-3">
            <div class="w-full">
              <div class="flex flex-wrap mb-6">
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                  <%= form.label(:title, class: "form-label lg:mb-2") %>
                  <%= form.text_field(:title, id: 'title', autofocus: true, placeholder: 'Title',
                          class: "form-input mt-2") %>
                </div>
                <div class="w-full md:w-1/2 px-3">
                  <div class="relative">
                    <%= form.label(:status, class: "form-label lg:mb-2") %>
                    <%= form.select(:status, task_statuses, {},
                                  id: 'status',
                                  class: 'form-input mt-2') %>
                    <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                            flex items-center px-2 text-gray-700">
                      <svg class="ml-2 h-6 w-6 text-gray-500" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M15.3 9.3a1 1 0 0 1 1.4 1.4l-4 4a1 1 0 0 1-1.4
                              0l-4-4a1 1 0 0 1 1.4-1.4l3.3 3.29 3.3-3.3z" />
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="w-full">
              <div class="flex flex-wrap mb-6">
                <div class="w-full px-3">
                  <%= form.label(:description, class: "form-label lg:mb-2") %>
                  <%= form.text_area(:description, id: 'description', placeholder: 'Describe your task...',
                          class: "form-input mt-2 h-24") %>
                </div>
              </div>
            </div>
            <div class="w-full">
              <div class="flex flex-wrap mb-6">
                <div class="w-1/2 md:w-1/2 px-3 mb-6 md:mb-0">
                  <%= form.label(:date, class: "form-label lg:mb-2") %>
                  <div class="flex">
                    <div
                    class="w-12 mt-2 bg-gray-100 rounded-l border-t border-l border-b border-gray-500 flex items-center justify-center">
                      <svg class="h-5 w-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                    </div>
                    <%= form.date_field(:date, step: 0.25, id: 'date',
                          class: "form-input rounded-l-none mt-2") %>
                  </div>
                </div>
              </div>
            </div>
            <div class="w-full">
              <div class="flex flex-wrap mb-6">
                <div class="w-1/2 md:w-1/3 px-3 mb-6 md:mb-0">
                  <%= form.label(:hours, class: "form-label lg:mb-2") %>
                  <div class="flex">
                    <div
                    class="w-12 mt-2 bg-gray-100 rounded-l border-t border-l border-b border-gray-500 flex items-center justify-center">
                      <svg class="h-5 w-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                    <%= form.number_field(:hours, step: 0.25, id: 'hours',
                          class: "form-input rounded-l-none mt-2") %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full flex border-t border-gray-400 p-4 mt-2">
          <div class="w-full flex justify-end items-center">
            <div class="w-20 mr-2">
              <%= link_to(t('.cancel'), projects_path, class: "w-full text-red-500 uppercase font-bold text-sm hover:text-red-300") %>
            </div>
            <div class="w-30">
              <%= form.submit(class: "py-2 px-2 w-full uppercase no-underline
                                      rounded bg-green-500 text-white font-bold text-sm
                                      hover:text-white hover:bg-green-400 focus:outline-none
                                      ") %> </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
