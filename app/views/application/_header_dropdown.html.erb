<div x-show="open" x-show="night_mode" class="absolute z-50 mt-2 rounded"
  x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95"
  x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75"
  x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95">
  <div class="rounded bg-white border border-gray-400 w-48">
    <%= link_to(account_path) do %>
      <div class="w-full flex hover:bg-gray-100 px-3 py-3">
        <div class="h-10 w-10 rounded bg-indigo-700 flex items-center justify-center text-white font-bold uppercase">
          <%= current_user.initials %>
        </div>
        <span class="hidden lg:inline ml-2 mr-2 text-xs font-semibold">
          <%= current_user.name %>
          <p class="text-xs text-gray-700 flex justify-start"><%= current_user.organisations.first %></p>
        </span>
      </div>
    <% end %>
    <div class="block text-sm text-gray-800 flex items-center justify-between px-3 py-3 border-t border-b">
      <div class="flex items-center">
        <svg class="h-4 w-4 inline-block mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
        </svg>
        <%= t('application.header.night_mode') %>
      </div>
      <div x-data="{ night_mode: false }">
        <button @click="night_mode = !night_mode" @click="night_mode = true"
          class="rounded-full bg-gray-400 w-10 h-5 flex items-center focus:outline-none"
          :class="{'bg-indigo-500': night_mode}">
          <div class="rounded-full h-3 w-3 bg-white m-1" :class="{'ml-6': night_mode}">
          </div>
        </button>
      </div>
    </div>
    <%= link_to(account_path, class: 'block p-3 text-sm text-gray-800 hover:bg-indigo-100 hover:text-indigo-700 flex items-center justify-between') do %>
      <div class="flex items-center">
        <span class="inline-block mr-2">
          <%= render("application/icons/dashboard") %>
        </span>
        <%= t('application.header.home') %>
      </div>
      <div class="flex justify-end inline-block mt-px text-gray-500">
        <%= render("application/icons/arrow_right") %>
      </div>
    <% end %>
    <%= link_to(settings_account_path, class: 'block p-3 text-sm text-gray-800 hover:bg-indigo-100 hover:text-indigo-700 flex items-center justify-between') do %>
      <div class="flex items-center">
        <span class="inline-block mr-2">
          <%= render("application/icons/settings") %>
        </span>
        <%= t('application.header.settings') %>
      </div>
      <div class="flex justify-end inline-block mt-px text-gray-500">
        <%= render("application/icons/arrow_right") %>
      </div>
    <% end %>
    <%= link_to(sign_out_path, method: 'delete', class: "block p-3 text-sm text-gray-800 hover:bg-red-100 hover:text-red-700 rounded-b flex items-center") do %>
      <span class="inline-block mr-2">
        <%= render("application/icons/sign_out") %>
      </span>
      <%= t('application.header.sign_out') %>
    <% end %>
  </div>
</div>
