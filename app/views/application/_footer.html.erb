<div class="bg-gray-900 border-t border-gray-800">
  <div class="container mx-auto">
    <div class="w-full mx-auto md:w-4/5">
      <div class="flex flex-wrap text-left text-center md:mb-8 md:justify-end md:text-left">
        <div class="justify-center w-full px-8 mt-8 md:w-1/2 lg:w-2/3 md:mt-12 md:justify-start md:px-16 md:pl-16 md:pr-0">
          <%= link_to(root_path) do%>
            <%= image_tag('apti_logo.svg', alt: 'Home', style: 'width: 3rem;', class: 'mt-1 mx-auto md:mx-0') %>
          <% end %>
          <div class="w-full mt-5 md:w-full">
            <span class="font-semibold text-gray-500 text-md">
              <%= t('.Ett ställe där du kan hitta certiferade kontrollansvariga') %>
            </span>
          </div>
        </div>
        <div class="flex flex-col w-full px-16 mt-8 text-left text-center md:w-1/2 lg:w-1/3 md:mt-12 md:px-8 md:text-left">
          <span class="font-bold text-gray-400 uppercase text-md md:text-lg">
            <%= t('.länkar') %>
          </span>
          <div class="flex">
            <div class="w-1/2 mt-2">
              <ul class="font-semibold">
                <li class="-mb-1">
                  <%= link_to(map_path, class: 'text-gray-500 hover:text-white') do %>
                    <%= t('.map') %>
                  <% end %>
                </li>
                <li class="-mb-1">
                  <%= link_to(contact_path, class: 'text-gray-500 hover:text-white') do %>
                    <%= t('.contact') %>
                  <% end %>
                </li>
                <li class="-mb-1">
                  <%= link_to(connect_path, class: 'text-gray-500 hover:text-white') do %>
                    <%= t('.connect') %>
                  <% end %>
                </li>
              </ul>
            </div>
            <div class="w-1/2 mt-2">
              <ul class="font-semibold">
                <li class="-mb-1">
                  <%= link_to(about_path, class: 'text-gray-500 hover:text-white') do %>
                    <%= t('.about_us') %>
                  <% end %>
                </li>
                <li class="-mb-1">
                  <%= link_to(sign_in_path, class: 'text-gray-500 hover:text-white') do %>
                    <%= t('.sign_in') %>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="w-full">
        <div class="py-5 text-center">
          <span class="text-sm text-gray-500">
            <%= link_to(root_path, class: 'hover:text-blue-400') do %>
              Apti.se
            <% end %>
            © 2020. All rights reserved.
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
