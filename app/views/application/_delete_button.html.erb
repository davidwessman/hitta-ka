<% confirmation ||= t('.delete_confirm') %>
<% title ||= t('.delete') %>
<% path ||= nil %>
<div class="flex" x-data="{openModal: false}">
  <div @click="openModal = true"
    class="rounded flex items-center btn btn-red cursor-pointer btn-bounce normal-case">
    <%= t('.delete' )%> <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
    </svg>
  </div>
  <div x-show="openModal" class="overflow-y-auto bg-gray-900" style="background-color: rgba(0,0,0,0.5)"
    x-transition:enter="transition ease-out duration-300" x-transition:enter-start="transform opacity-0 scale-100"
    x-transition:enter-end="transform opacity-100 scale-100"
    class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg"
    :class="{ 'absolute inset-0 z-50 flex items-center justify-center': openModal }">
    <div x-show="openModal" @click.away="openModal = false"
      class="bg-gray-100 rounded-md w-11/12 md:w-3/4 lg:w-1/3 opacity-100 flex flex-col items-center pt-4 px-4 lg:pt-8 lg:px-8 pb-4 relative max-w-xl">
      <div @click="openModal = false"
        class="absolute top-0 right-0 bg-red-600 w-8 h-8 rounded-full text-white font-bold flex items-center justify-center -mt-4 -mr-4 cursor-pointer">
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </div>
      <div class="flex items-center">
        <div class="">
          <svg class="h-16 w-16 text-gray-600 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <div class="ml-4 text-gray-700">
          <h1 class="text-gray-900 font-semibold text-xl"><%= title %></h1>
          <span class=""><%= confirmation %></span>
        </div>
      </div>
      <div class="w-full flex items-center justify-end mt-4">
        <div @click="openModal = false"
          class="btn bg-white border border-gray-400 text-gray-900 cursor-pointer hover:text-gray-500">
          <%=  t('.cancel') %>
        </div>
        <%= button_to(t('.delete'), path,
                        method: :delete,
                        class: "btn btn-red btn-bounce ml-6") %>
      </div>
    </div>
  </div>
</div>
