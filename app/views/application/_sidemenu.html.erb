<div class="sidemenu hidden lg:block">
  	<div class="w-full border-b border-gray-900 p-2 flex">
	  	<div class="w-1/6 ml-4">
			<div class="w-12 mt-4 ml-2">
				<%= image_tag('profile_pic.svg')%>
			</div>
		</div>
		<div class="w-5/6 p-6">
			<h3 class="text-2xl font-medium text-gray-200"><p class=""><%= current_user.name %></p></h3>
		</div>
	</div>
	<div class="w-full mt-4">
		<h2 class="text-gray-400 opacity-50 font-semibold ml-4">Main</h2>
		<ul class="menu-list mt-2">
			<li>
				<%= link_to(account_path,
							class: aside_item_class(['home'])) do %>
				<div class="w-10 inline-block text-center">
					<%= icon('fas', 'home', class: "text-gray-500 mt-2") %>
				</div>
				<div class="opacity-75 inline font-semibold">
					<%= t('.home') %>
				</div>
				<% end %>
			</li>
			<li>
				<%= link_to(projects_path,
							class: aside_item_class(['projects'])) do %>
				<div class="w-10 inline-block text-center">
					<%= icon('fas', 'tasks', class: "text-gray-500 mt-2") %>
				</div>
				<div class="opacity-75 inline font-semibold">
					<%= t('.projects') %>
				</div>
				<% end %>
			</li>
			<li>
				<%= link_to(account_path,
							class: aside_item_class(['customers'])) do %>
				<div class="w-10 inline-block text-center">
					<%= icon('fas', 'users', class: "text-gray-500 mt-2") %>
				</div>
				<div class="opacity-75 inline font-semibold">
					<%= t('.customers') %>
				</div>
				<% end %>
			</li>
		</ul>
		<h2 class="text-gray-400 opacity-50 font-semibold ml-4 mt-4">Settings</h2>
		<ul class="menu-list mt-2">
			<li>
				<%= link_to(settings_path,
						class: aside_item_class(['settings'])) do %>
				<div class="w-10 inline-block text-center">
					<%= icon('fas', 'user-cog', class: "text-gray-500 mt-2") %>
				</div>
				<div class="opacity-75 inline font-semibold">
					<%= t('.settings') %>
				</div>
				<% end %>
			</li>
		</ul>
		<%= yield(:sidemenu) %>
	</div>
</div>
