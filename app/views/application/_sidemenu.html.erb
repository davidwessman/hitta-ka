<aside class="column menu is-2 aside is-fullheight is-hidden-touch bg-gray-900">
    <div class="w-full flex mb-6 -mt-2 border-b border-gray-400">
			<div class="w-1/6 mb-4">
				<div class="lg:w-8 xl:w-10 mt-2">
					<%= image_tag('profile_pic.svg')%>
				</div>
      </div>
      <div class="w-5/6 p-4">
        <h3 class="lg:text-md xl:text-lg font-medium text-gray-200"><p class=""> <%= current_user.name %></p></h3>
      </div>
		</div>
  <ul class="menu-list">
    <li>
      <%= link_to(account_path,
                  class: aside_item_class(['home'])) do %>
        <%= icon('fas', 'home') %>
        <%= t('.home') %>
      <% end %>
    </li>
  </ul>
  <%= yield(:sidemenu) %>
</aside>
