<% organisations ||= [] %>
<%= form_with(model: customer, local: true, class: 'w-full flex flex-col flex-wrap bg-white shadow-xl rounded-lg mt-4 p-5') do |form| %>
    <div class="flex flex-col mb-4 max-w-xs">
        <%= form.label(:organisation, class: 'form-label ') %>
        <%= form.select(:organisation_id, organisations.collect { |org| [org.to_s, org.id] }, {}, id: 'organisation', class: 'form-select mt-1 block w-full') %>
    </div>
    <div class="flex flex-col mb-4 max-w-xs">
        <%= form.label(:name, class: 'form-label ') %>
        <%= form.text_field(:name, id: 'name', autofocus: true,
                                    class: 'shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker') %>
    </div>
    <div class="w-full">
        <div class="w-full flex border-t border-gray-300 pt-4 px-4 mt-8">
            <div class="w-full flex justify-end items-center">
                <div class="w-20 mr-2">
                    <%= link_to("Cancel", customers_path, class: "w-full text-blue-600 uppercase font-bold text-sm hover:text-blue-300") %>
                </div>
                <div class="w-30">
                    <%= form.submit(class: 'py-2 px-2 w-full uppercase shadow-md no-underline rounded bg-blue-600 text-white font-bold text-sm hover:text-white hover:bg-blue-400 focus:outline-none active:shadow-none') %>
                </div>
            </div>
        </div>
    </div>
<% end %>
