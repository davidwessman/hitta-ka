<% organisations ||= [] %>
<%= form_with(model: customer, local: true, class: 'w-full pb-16', html: { role: 'check-modified' }) do |form| %>
  <div class="flex flex-wrap -mx-2">
    <div class="w-full xl:w-2/3 max-w-4xl px-2">
      <div class="flex flex-wrap bg-white rounded-md border border-gray-600">
        <div class="flex-grow h-12 bg-green-600 px-3 py-2 rounded-t flex items-center -m-px">
          <h1 class="text-white font-semibold font-semibold text-xl xl:text-2xl"><%= t('.new_customer') %></h1>
        </div>
        <div class="w-full mt-2 px-4 py-2 lg:px-8 lg:py-4">
          <div class="flex flex-wrap -mx-3">
            <div class="w-full">
              <div class="flex flex-wrap mb-6">
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                  <%= form.label(:name, class: "form-label lg:mb-2") %>
                  <%= form.text_field(:name, id: 'name', autofocus: true, placeholder: 'Name',
                          class: "form-input mt-2") %>
                </div>
                <div class="w-full md:w-1/2 px-3">
                  <div class="relative">
                    <%= form.label(:organisation, class: 'form-label lg:mb-2') %>
                    <%= form.select(:organisation_id, organisations.collect { |org| [org.to_s, org.id] }, {}, id: 'organisation',
          class: 'form-input bg-gray-100 mt-2') %>
                    <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                              flex items-center px-2 text-gray-700">
                      <%= render('application/icons/arrow_down') %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="w-full">
              <div class="flex flex-wrap mb-2">
                <div class="w-1/2 px-3 mb-6">
                  <%= form.label(:phone, class: "form-label lg:mb-2") %>
                  <div class="flex">
                    <div
                    class="w-12 mt-2 bg-gray-100 rounded-l border-t border-l border-b border-gray-500 flex items-center justify-center">
                      <span class="text-gray-700">
                        <%= render('application/icons/phone') %>
                      </span>
                    </div>
                    <%= form.text_field(:phone, id: 'phone',
                          class: "form-input rounded-l-none mt-2") %>
                  </div>
                </div>
                <div class="w-1/2 px-3 mb-6 md:mb-0">
                  <%= form.label(:email, class: "form-label lg:mb-2") %>
                  <div class="flex">
                    <div
                    class="w-12 mt-2 bg-gray-100 rounded-l border-t border-l border-b border-gray-500 flex items-center justify-center">
                      <span class="text-gray-700">
                        <%= render('application/icons/email') %>
                      </span>
                    </div>
                    <%= form.text_field(:email, id: 'email',
                          class: "form-input rounded-l-none mt-2") %>
                  </div>
                </div>
              </div>
              <div class="w-1/2 md:w-1/3 px-3">
                <div class="flex justify-between mt-1 mb-1 lg:mb-2 relative">
                  <%= form.label(:task_rate, class: "form-label") %>
                  <div @click.away="open = false" x-data="{ open: false }">
                    <div>
                      <div class="cursor-pointer" @click="open = !open" @click="open = true">
                        <%= render('application/icons/info') %>
                      </div>
                      <div x-show="open" class="absolute z-50 bg-white border border-gray-400 rounded p-4 w-64">
                        Use this option if you want to set a custom task rate for this customer. Your standard task rate
                        can be changed on the settings page.
                      </div>
                    </div>
                  </div>
                </div>
                <%= form.text_field(:title, id: 'title', placeholder: '990,00',
                          class: "form-input mt-2") %>
              </div>
            </div>
          </div>
          <%= render('form_address', form: form) %>
        </div>
        <div class="w-full flex border-t border-gray-400 p-4 mt-2">
          <div class="w-full flex justify-end items-center">
            <div class="w-20 mr-2">
              <%= link_to(t('.cancel'), projects_path, class: "text-red-500 uppercase font-bold text-sm hover:text-red-300") %>
            </div>
            <div class="w-30">
              <%= form.submit(class: "py-2 px-2 w-full uppercase no-underline
                                      rounded bg-green-500 text-white font-bold text-sm
                                      hover:text-white hover:bg-green-400 focus:outline-none
                                      ") %> </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
