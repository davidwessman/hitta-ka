        <%= form.label(:street, class: "text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0") %>
      </div>
      <div class="w-full">
        <%= form.text_field(:street, id: "street", class: "text-sm appearance-none block w-full shadow text-gray-700 border border-gray-300 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500") %>
      </div>
    </div>
    <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center">
      <div class="w-full lg:w-56 pr-2">
