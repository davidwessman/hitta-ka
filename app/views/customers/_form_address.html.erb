<div class="w-full mt-8 -mx-3 xl:w-4/5">
  <div class="w-full mt-4 mb-3">
    <span class="ml-3 mr-2 text-2xl font-medium text-gray-800">
      <%= t('.address') %>
    </span>
  </div>
  <div class="w-full mb-6">
    <div class="flex flex-wrap mb-2">
      <div class="w-full px-3 mb-6 md:w-1/2 md:mb-0">
        <%= form.label(:street, class: "form-label lg:mb-2") %>
        <%= form.text_field(:street, id: "street",
                  class: "form-input mt-2") %>
      </div>
      <div class="w-full px-3 md:w-1/2">
        <%= form.label(:zip_code, class: "form-label lg:mb-2") %>
        <%= form.text_field(:zip_code, id: 'zip_code',
                  class: "form-input mt-2") %>
      </div>
    </div>
  </div>
  <div class="w-full">
    <div class="flex flex-wrap mb-2">
      <div class="w-full px-3 mb-6 md:w-1/2 md:mb-0">
        <%= form.label(:city, class: "form-label lg:mb-2") %>
        <%= form.text_field(:city, id: 'city',
                  class: "form-input mt-2") %>
      </div>
      <div class="w-full px-3 mb-6 md:w-1/2">
        <div class="relative">
          <%= form.label(:country, class: "form-label lg:mb-2") %>
          <%= form.select(:country, options_for_select([['Sweden', 1]]),
{},
class: 'form-input mt-2') %>
          <div class="absolute inset-y-0 flex items-center px-2 mt-8 text-gray-700 pointer-events-none right-0
 ">
            <svg class="w-6 h-6 ml-2 text-gray-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M15.3 9.3a1 1 0 0 1 1.4 1.4l-4 4a1 1 0 0 1-1.4
                            0l-4-4a1 1 0 0 1 1.4-1.4l3.3 3.29 3.3-3.3z" />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
