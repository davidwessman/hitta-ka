<% content_for(:sidebar) do %>
  <%= render('application/account_menu', current: :customers) %>
<% end %>
<% content_for(:header_title) do %>
  <%= t('.title') %>
<% end %>
<div class="w-full overflow-y-auto lg:flex-grow">
  <div class="flex-grow mx-auto">
    <div class="px-6 py-5 text-sm font-medium text-gray-900 lg:text-sm lg:px-8">
      <div class="flex items-center">
        <%= link_to(customers_path, class: 'text-gray-500') do %>
          <%= t('.customers') %>
        <% end %> <svg class="inline-block w-5 h-5 mt-px text-gray-500" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd"
            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
            clip-rule="evenodd" />
        </svg>
        <span class="">
          <%= t('.title') %>
        </span>
      </div>
      <h1 class="mt-2 text-2xl font-extrabold md:text-3xl md:font-bold lg:mt-1 lg:hidden">
        <%= t('.title') %>
      </h1>
    </div>
    <div class="px-2 lg:px-8">
      <%= render('form', customer: @customer, organisations: @organisations) %>
    </div>
  </div>
</div>
