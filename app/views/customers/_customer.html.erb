<div class="w-full bg-white rounded-lg border border-gray-500">
  <div class="rounded-t-lg bg-gray-200">
    <%= link_to(customer_path(customer)) do %>
    <div class="p-3 xl:p-4">
      <div class="w-full">
        <div class="text-xs uppercase font-bold text-gray-600 tracking-wide">
          <%= t('.customer') %>
        </div>
      </div>
      <div class="flex items-center pt-2">
        <div class="rounded-full h-12 w-12 bg-green-500 inline-flex items-center justify-center mr-3">
          <span class="icon text-white uppercase">
            <%= customer.initials %>
          </span>
        </div>
        <div>
          <p class="text-base xl:text-lg font-bold text-gray-900"><%= customer.name %></p>
          <p class="text-sm xl:text-base text-gray-700"><%= customer.phone %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="flex border-gray-300 border-t border-b">
    <div class="p-3 xl:p-4">
      <div class="text-xs uppercase font-bold text-gray-600 tracking-wide">
        <%= t('.address') %>
      </div>
      <% if customer.street.present? %>
      <p class="text-xl xl:text-2xl text-gray-900"><%= customer.street %></p>
      <% end %>
      <% if customer.zip_code.present? && customer.city.present? %>
      <p class="text-base xl:text-lg text-gray-700"><%= customer.zip_code %>, <%= customer.city %></p>
      <% elsif customer.zip_code.present? %>
      <p class="text-lg text-gray-700"><%= customer.zip_code %></p>
      <% elsif customer.city.present? %>
      <p class="text-lg text-gray-700"><%= customer.city %></p>
      <% end %>
    </div>
  </div>
  <div class="p-3 xl:p-4 rounded-b-lg text-base text-blue-600">
    <% if customer.email.present? || customer.web.present? %>
    <div class="text-xs uppercase font-bold text-gray-600 tracking-wide">
      <%= t('.mail') %>
    </div>
    <div class="flex items-center mt-2">
      <% if customer.email.present? %>
      <div class="w-5 inline-block text-center text-lg">
        <i class="far fa-envelope fa-2xl"></i>
      </div>
      <div class="text-center inline ml-2 truncate">
        <%= link_to(customer.email, "mailto:#{customer.email}") %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
