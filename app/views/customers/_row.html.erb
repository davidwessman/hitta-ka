<div class="flex border-b border-gray-400">
  <%= link_to(customer_path(customer), class: 'flex-grow flex py-3 text-left hover:bg-green-200') do %>
    <div class="w-20 md:w-24 flex justify-center items-center">
      <div class="rounded-full h-9 w-9 md:h-10 md:w-10 bg-green-600 inline-flex
                    items-center justify-center text-white font-bold uppercase">
        <%= customer.initials %>
      </div>
    </div>
    <div class="w-full flex items-center">
      <div class="w-1/3 lg:w-1/5">
        <p class="text-sm md:text-base"><%= customer.name%></p>
        <p class="text-sm text-gray-700 opacity-75">Individual</p>
      </div>
      <div class="w-1/3 lg:w-1/5">
        <p class="text-sm md:text-base"><%= customer.latest_project %></p>
      </div>
      <div class="w-1/5 hidden lg:inline-block">
        <p class="text-sm md:text-base"><%= customer.projects.count %></p>
      </div>
      <div class="w-1/3 lg:w-1/5 flex justify-center md:justify-start">
        5.799,00 kr
      </div>
      <div class="w-1/3 lg:w-1/5 flex justify-center md:justify-start">
        5.799,00 kr
      </div>
    </div>
  <% end %>
  <div class="hidden md:flex items-center relative inline-block" @click.away="edit_dropdown = false"
    x-data="{ edit_dropdown: false }">
    <div class="cursor-pointer h-16 w-16 -ml-20 flex items-center justify-center"
      @click="edit_dropdown = !edit_dropdown" @click="edit_dropdown = true">
      <svg class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" />
      </svg>
    </div>
    <%= render('customers/edit_dropdown', customer: customer) %>
  </div>
</div>
