<div class="w-full lg:w-1/2 lg:p-2 mt-4 lg:mt-0">
  <div class="h-12 bg-gray-800 px-3 py-2 rounded-t">
    <h1 class="text-white font-semibold font-semibold text-lg xl:text-xl"><%= t('.contact_information') %></h1>
  </div>
  <div class="border-l border-b border-r border-gray-400 bg-white shadow p-3 xl:px-6">
    <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center">
      <div class="w-full lg:w-56 pr-2">
        <%= form.label(:email, class: "text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0") %>
      </div>
      <div class="w-full">
        <%= form.text_field(:email, id: "email", class: "text-sm appearance-none block w-full shadow text-gray-700 border border-gray-300 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500") %>
      </div>
    </div>
    <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center">
      <div class="w-full lg:w-56 pr-2">
        <%= form.label(:web, class: "text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0") %>
      </div>
      <div class="w-full">
        <%= form.text_field(:web, id: "web", class: "text-sm appearance-none block w-full shadow text-gray-700 border border-gray-300 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500") %>
      </div>
    </div>
    <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center">
      <div class="w-full lg:w-56 pr-2">
        <%= form.label(:phone, class: "text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0") %>
      </div>
      <div class="w-full">
        <%= form.text_field(:phone, id: "phone", class: "text-sm appearance-none block w-full shadow text-gray-700 border border-gray-300 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500") %>
      </div>
    </div>
  </div>
</div>
