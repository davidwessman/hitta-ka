<div class="flex border-b border-gray-300">
  <%= link_to(customer_project_path(project.customer, project), class: 'flex-grow flex py-3 hover:bg-blue-200') do %>
    <div class="flex items-center justify-center px-2 sm:px-4 xl:px-6">
      <div class="items-center justify-center w-8 h-8 text-xs font-bold text-white bg-blue-500 rounded-full md:h-10 md:w-10 inline-flex
  md:text-sm lg:text-base">
        <i class="fas <%= project.symbol %>"></i>
      </div>
    </div>
    <div class="flex items-center flex-grow text-xs sm:text-sm xl:text-base">
      <div class="w-1/3 pr-2 break-all lg:w-1/5 md:pr-4">
        <p class=""><%= project.title %></p>
        <p class="text-xs text-gray-700 opacity-75 md:text-sm">#<%= project.id %></p>
      </div>
      <div class="w-1/3 pr-2 lg:w-1/5 break-word lg:pr-4">
        <p class="break-words"><%= project.customer.name %></p>
        <p class="text-xs text-gray-700 opacity-75 md:text-sm">Privatperson</p>
      </div>
      <div class="w-1/3 lg:w-1/5">
        <p class="break-words"><%= project.tasks.count %> st</p>
        <p class="text-gray-700 opacity-75"><%= project.hours %> h</p>
      </div>
      <div class="hidden w-1/5 lg:flex">
        <p class="break-words"><%= l(project.created_at, format: "%Y-%m-%d") %></p>
      </div>
      <div class="hidden w-1/3 lg:w-1/5 lg:flex">
        <%= project_tag(project.status) %>
      </div>
    </div>
    <div class="flex items-center w-1/6 lg:w-1/6 lg:hidden">
      <div class="flex items-center pl-4 md:pl-5">
        <%= project_tag_mobile(project.status) %>
      </div>
    </div>
  <% end %>
  <div class="relative hidden text-left sm:inline-block" @click.away="edit_dropdown = false"
    x-data="{ edit_dropdown: false }">
    <div class="flex items-center justify-center w-10 h-16 -ml-12 cursor-pointer xl:w-16 xl:-ml-20"
      @click="edit_dropdown = !edit_dropdown" @click="edit_dropdown = true">
      <svg class="w-6 h-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" />
      </svg>
    </div>
    <div class="-mt-4">
      <%= render('projects/edit_dropdown', project: project) %>
    </div>
  </div>
</div>
