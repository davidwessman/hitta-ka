<div class="flex border-b border-gray-400 bg-white">
  <%= link_to(customer_project_path(project.customer, project), class: 'flex-grow py-3 flex text-left hover:bg-blue-200') do %>
    <div class="pl-3 pr-5 md:px-4 xl:px-6 flex justify-center items-center">
      <div class="rounded-full h-8 w-8 md:h-10 md:w-10 bg-blue-500 inline-flex
                    items-center justify-center text-white font-bold text-sm lg:text-lg">
        <i class="fas <%= project.symbol %>"></i>
      </div>
    </div>
    <div class="flex-grow flex items-center">
      <div class="w-1/3 lg:w-1/5 pr-4 break-all">
        <p class="text-sm md:text-base"><%= project.title %></p>
        <p class="text-sm text-gray-700 opacity-75">#<%= project.id %></p>
      </div>
      <div class="w-3/5 lg:w-1/5 pr-4 break-word">
        <p class="text-sm md:text-base break-words"><%= project.customer.name %></p>
        <p class="text-sm text-gray-700 opacity-75">Privatperson</p>
      </div>
      <div class="w-1/5 hidden lg:inline-block">
        <p class="text-sm md:text-base break-words"><%= project.tasks.count %> st</p>
        <p class="text-sm text-gray-700 opacity-75"><%= project.hours %> h</p>
      </div>
      <div class="w-1/5 hidden lg:inline-block">
        <p class="text-sm md:text-base break-words">2020-02-02</p>
      </div>
      <div class="w-1/3 lg:w-1/5 hidden md:inline-block">
        <%= project_tag(project.status) %>
      </div>
      <div class="w-1/4 sm:w-1/3 flex items-center justify-center md:hidden pr-8">
        <div class="rounded-full h-3 w-3 bg-blue-500">
        </div>
      </div>
    </div>
  <% end %>
  <div class="hidden sm:flex items-center relative inline-block" @click.away="edit_dropdown = false"
    x-data="{ edit_dropdown: false }">
    <div class="cursor-pointer h-16 w-10 xl:w-16 -ml-12 xl:-ml-20 flex items-center justify-center"
      @click="edit_dropdown = !edit_dropdown" @click="edit_dropdown = true">
      <svg class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" />
      </svg>
    </div>
    <%= render('projects/edit_dropdown', project: project) %>
  </div>
</div>
