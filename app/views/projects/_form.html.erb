<% customers ||= [] %>
<%= form_with(model: project, local: true, class: "flex flex-col w-full lg:w-1/2 px-3") do |form| %>
  <h1 class="text-2xl font-bold text-gray-800 mb-4">General details</h1>
  <div class="flex flex-wrap mb-10 items-center">
    <div class="hidden lg:w-1/3 lg:block pr-2">
      <h2 class="text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0 mt-4">
        Project
      </h2>
    </div>
    <div class="w-full lg:w-2/3 flex flex-wrap">
      <div class="w-1/2 pr-2">
        <h2 class="tracking-wide leading-none text-gray-700 text-sm
                  font-semibold mb-1 lg:mb-2">
          Title
        </h2>
        <%= form.text_field(:title, id: 'title', autofocus: true,
                            class: "text-sm appearance-none block w-full
                                    bg-gray-200 text-gray-700 border border-gray-300
                                    rounded py-3 px-4 leading-tight
                                    focus:outline-none focus:bg-white
                                    focus:border-gray-500") %>
      </div>
      <div class="w-1/2 pl-2">
        <h2 class="tracking-wide leading-none text-gray-700
                    text-sm font-semibold mb-1 lg:mb-2">
          Project ID
        </h2>
        <input
          class="text-sm appearance-none block w-full
                  bg-gray-200 text-gray-700 border border-gray-300
                  rounded py-3 px-4 leading-tight focus:outline-none
                  focus:bg-white focus:border-gray-500"
          type="text"
        />
        </div>
      </div>
    </div>
    <div class="flex flex-wrap mb-10 items-center">
      <div class="w-full lg:w-1/3 pr-2">
        <h2 class="text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0">
          Customer
        </h2>
      </div>
      <div class="w-full lg:w-2/3">
        <div class="w-full relative">
          <%= form.select(:customer_id, customers.collect { |customer| [customer.to_s, customer.id] },
                          {}, id: 'organisation',
                          class: 'text-sm appearance-none block w-full
                                  bg-gray-200 text-gray-700 border border-gray-300
                                  rounded py-3 px-4 leading-tight focus:outline-none
                                  focus:bg-white focus:border-gray-500') %>
        </div>
      </div>
    </div>
    <div class="flex flex-wrap mb-10">
      <div class="hidden lg:w-1/3 lg:block pr-2">
        <h2 class="text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0 mt-2">
          Project address
        </h2>
      </div>
      <div class="w-full lg:w-2/3 flex flex-wrap">
        <div class="w-1/2 pr-2">
          <input placeholder="Street"
                      class="text-sm appearance-none block w-full bg-gray-200
                            text-gray-700 border border-gray-300 rounded
                            py-3 px-4 leading-tight focus:outline-none
                            focus:bg-white focus:border-gray-500"
                      type="text" />
        </div>
        <div class="w-1/2 pl-2">
          <input placeholder="Zip code"
                      class="text-sm appearance-none block w-full bg-gray-200
                            text-gray-700 border border-gray-300 rounded
                            py-3 px-4 leading-tight focus:outline-none
                            focus:bg-white focus:border-gray-500"
                      type="text" />
        </div>
        <div class="w-full mt-4">
          <input placeholder="City"
                            class="text-sm appearance-none block w-full bg-gray-200
                                    text-gray-700 border border-gray-300 rounded
                                    py-3 px-4 leading-tight
                                    focus:outline-none focus:bg-white focus:border-gray-500"
                            type="text" />
        </div>
      </div>
    </div>
    <div class="flex flex-wrap mb-10 items-center">
      <div class="w-full lg:w-1/3 pr-2">
        <h2 class="text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0">
          Custom task rate
        </h2>
      </div>
      <div class="w-full lg:w-2/3">
        <div class="w-full">
          <input placeholder="1234"
                            class="text-sm appearance-none block w-full bg-gray-200
                                    text-gray-700 border border-gray-300 rounded
                                    py-3 px-4 leading-tight
                                    focus:outline-none focus:bg-white focus:border-gray-500"
                            type="text" />
        </div>
      </div>
    </div>
    <div class="flex flex-wrap mb-10 items-center">
      <div class="w-full lg:w-1/3 pr-2">
        <h2 class="text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0">
          Project type
        </h2>
      </div>
      <div class="w-full lg:w-2/3">
        <div class="w-full">
          <div class="relative">
            <select class="text-sm appearance-none block w-full bg-gray-200
                                text-gray-700 border border-gray-300 rounded
                                py-3 px-4 leading-tight
                                focus:outline-none focus:bg-white focus:border-gray-500">
              <option class="text-gray-200" disabled selected>Select your option</option>
              <option>Hus</option>
              <option>Villa</option>
              <option>LÃ¤genhet</option>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0
                            flex items-center px-2 text-gray-700">
              <svg class="ml-2 h-6 w-6 text-gray-500" fill="currentColor"
                        viewBox="0 0 24 24">
                <path d="M15.3 9.3a1 1 0 0 1 1.4 1.4l-4 4a1 1 0 0 1-1.4
                              0l-4-4a1 1 0 0 1 1.4-1.4l3.3 3.29 3.3-3.3z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="flex flex-wrap">
      <div class="w-full lg:w-1/3">
        <div class="pr-4">
          <h2 class="text-sm lg:text-base text-gray-700 font-semibold">
            Description
          </h2>
          <p class="text-xs lg:text-sm font-semibold lg:mt-1 text-gray-500 mb-1 lg:mb-0">
            Here you can write a brief description of the project.
          </p>
        </div>
      </div>
      <div class="w-full lg:w-2/3">
        <div class="w-full">
          <textarea class="text-sm appearance-none resize-none block w-full bg-gray-200
                                  text-gray-700 border border-gray-300 rounded
                                  py-3 px-4 leading-tight focus:outline-none
                                  focus:bg-white focus:border-gray-500 h-24"
                            id="subject" type="description">
                </textarea>
        </div>
      </div>
    </div>
    <div class="w-full flex border-t border-gray-300 pt-4 px-4 mt-8">
      <div class="w-full flex justify-end items-center">
        <div class="w-20 mr-2">
          <button class="w-full text-blue-600 uppercase font-bold text-sm hover:text-blue-300">
            Cancel
          </button>
        </div>
        <div class="">
          <%= form.submit(class: "py-2 px-2 w-full uppercase shadow-md no-underline
                                    rounded bg-blue-600 text-white font-bold text-sm
                                    hover:text-white hover:bg-blue-400 focus:outline-none
                                    active:shadow-none") %>
        </div>
      </div>
    </div>
<% end %>
