<% content_for(:sidemenu) do %>
  <%= render('panel', active: :show_project, project: @project) %>
<% end %>

<div class="w-full border-b border-gray-500 -mt-4 mb-4 px-2">
	<%= project_title(@project.status) %>
	<div class="flex flex-wrap -mt-4 mb-2">
		<div class="w-full md:w-1/3 px-2">
			<div class="flex">
				<div class="w-full mt-2">
					<h2 class="text-3xl text-blue-900 -ml-2"><%=@project%></h2>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="w-full border">
	<div class="flex">
		<div class="w-full md:w-1/2 px-2">
			<%= render('inspections/upcoming', inspections: @inspections,
										project: @project) %>
		</div>
		<div class="flex-grow">
		</div>

		<div class="max-w-sm rounded overflow-hidden shadow-lg bg-white">
			<%= image_tag('photo_placeholder.svg')%>
			<div class="px-6 py-4">
				<div class="font-bold text-xl mb-2">
					<%=@project%>
				</div>
				<p class="text-gray-700 text-base">
					<%=@project.description%>
				</p>
			</div>
			<div class="px-6 py-4">
			</div>
		</div>
	</div>
</div>

<div class="mt-8">
	<%= render(@project.customer) %>
</div>

<div class="w-full">
<%= render('images', image: @image, project: @project) %>
</div>
