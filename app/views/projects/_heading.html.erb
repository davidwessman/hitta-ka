<div class="w-full flex justify-between bg-white border-b-2 border-blue-500 px-4 py-2 lg:hidden">
  <div class="mb-1 leading-tight">
    <h1 class="text-3xl font-bold text-gray-800"><%= t('.title') %></h1>
    <h2 class="text-xl font-medium text-blue-600">All projects</h2>
  </div>
  <div class="flex items-start mt-1">
    <%= link_to(new_project_path, class: 'btn btn-blue normal-case text-base') do %>
      <%= t('.new_project') %>
    <% end %>
  </div>
</div>
<div class="w-full lg:mb-2 flex justify-start lg:justify-between items-center">
  <div class="hidden lg:flex">
    <h2 class="text-gray-900 text-2xl xl:text-3xl font-semibold leading-none">
      <% if params[:status].present? %>
        <%= t("model.project.status.#{params[:status]}") %>
        <span class="lowercase"><%= t('.title') %></span>
      <% else %>
        <%= t('.all_projects') %>
      <% end %>
    </h2>
  </div>
  <div class="flex items-start hidden lg:flex ml-2">
    <%= link_to(new_project_path, class: 'btn btn-blue py-2 normal-case text-base') do %>
    <div class="-ml-1 mr-1">
      <%= render('application/icons/plus') %>
    </div>
      <%= t('.new_project') %>
    <% end %>
  </div>
</div>
