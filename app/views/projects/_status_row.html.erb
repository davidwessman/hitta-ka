<%= link_to(customer_project_path(project.customer, project), class: "flex w-full px-0 xl:px-2 py-4 text-gray-900 items-center border-b") do %>
  <div class="w-1/2 xl:w-2/5 px-2 md:px-4 flex items-center">
    <div class="rounded-full h-10 w-10 bg-indigo-500 inline-flex mr-3 items-center justify-center">
      <span class="icon text-white">
        <i class="fas fa-lg <%= project.symbol %>"></i>
      </span>
    </div>
    <div>
      <p class="text-md"><%= project.title %> - #<%= project.id %></p>
      <p class="text-sm text-gray-700 opacity-75"><%= project.customer.name %></p>
    </div>
  </div>
  <div class="flex w-1/3 px-2 md:px-4 items-center">
    <div class="w-2/5">
      <div class="bg-orange-500 h-2 rounded-full flex-grow mr-2">
      </div>
    </div>
    50%
  </div>
  <div class="w-1/5 xl:w-1/4 px-2 md:px-4">
    <div class="text-right text-gray">
      <%= project.hours %> h
    </div>
  </div>
<% end %>
