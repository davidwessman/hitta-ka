<%= link_to(customer_project_path(project.customer, project), class: "flex w-full px-3 xl:px-6 py-4 text-gray-900 items-center border-b border-gray-200") do %>
  <div class="w-1/2 xl:w-2/5 flex items-center break-all">
    <div class="flex items-center">
      <div class="flex-shrink-0 h-10 w-10">
        <div class="rounded-full h-8 w-8 sm:h-10 sm:w-10 bg-blue-500 inline-flex items-center justify-center">
          <span class="icon text-white">
            <i class="fas fa-lg hidden sm:inline-block <%= project.symbol %>"></i>
            <i class="fas fa-sm sm:hidden <%= project.symbol %>"></i>
          </span>
        </div>
      </div>
      <div class="ml-2 sm:ml-4">
        <div class="text-base leading-5 text-gray-800"><%= project.title %>
          <div class="hidden lg:inline-block"> -
            #<%= project.id %></div>
        </div>
        <div class="text-xs sm:text-sm leading-5 text-gray-500"><%= project.customer.name %></div>
      </div>
    </div>
  </div>
  <div class="flex w-1/3 hidden md:flex justify-center">
    <%= l(project.created_at, format: "%Y-%m-%d") %>
  </div>
  <div class="w-1/4 xl:w-1/5 px-2 md:px-4">
    <div class="text-center text-gray">
      <%= project.hours %> h
    </div>
  </div>
  <div class="w-1/6 flex justify-end mr-8">
    <%= project_tag_mobile(project.status) %>
  </div>
<% end %>
