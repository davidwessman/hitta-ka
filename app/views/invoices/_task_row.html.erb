<div class="w-full flex items-start">
  <div class="w-10 flex inline-block justify-center items-center py-3">
    <div class="h-12 flex items-center">
      <%= icon('fas', 'plus', class: "text-blue-500") %>
    </div>
  </div>
  <div class="w-full flex items-start py-3">
    <div class="w-1/3 lg:w-1/4 flex border-r border-white px-1 xl:px-2">
      <%= form.text_field(:task, id: 'task',
                class: "form-input py-3") %>
    </div>
    <div class="w-1/3 xl:w-5/12 flex border-r border-white px-1 xl:px-2">
      <%= form.text_field(:description, id: 'description', placeholder: 'Describe the task...',
      class: "form-input py-3") %>
    </div>
    <div class="w-1/12 lg:w-1/6 xl:w-1/12 border-r border-white px-1 xl:px-2">
      <%= form.text_field(:task, id: 'task', placeholder: '999,00',
                class: "form-input py-3 text-right") %>
    </div>
    <div class="w-1/12 hidden lg:flex border-r border-white px-1 xl:px-2">
      <%= form.text_field(:task, id: 'task',
                class: "form-input py-3 text-right") %>
    </div>
    <div class="w-1/3 lg:w-1/6 flex items-center justify-end pl-2">
      <div class="h-12 flex items-center">
        <span class="text-sm xl:text-base">
          9.999,00 kr
        </span>
        <div class="rounded-full bg-red-700 w-4 h-4 flex items-center justify-center ml-4">
          <%= icon('fas', 'minus', class: "text-white text-xs") %>
        </div>
      </div>
    </div>
  </div>
</div>
