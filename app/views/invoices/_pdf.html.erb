<div class="clearfix mt-8">
  <div class="float-left w-2/3">
    <div class="clearfix w-64">
      <div class="float-left w-1/2">
        <span class="text-left"><%= t('invoices.pdf.our_reference') %>:</span>
      </div>
      <div class="float-left w-1/2 text-right">
        <span class="text-right"><%= current_user.name %></span>
      </div>
    </div>
    <div class="clearfix w-64">
      <div class="float-left w-1/2">
        <span class="text-left"><%= t('invoices.pdf.your_reference') %>:</span>
      </div>
      <div class="float-left w-1/2 text-right">
        <span class="text-right"><%= @invoice.customer.name %></span>
      </div>
    </div>
    <div class="mt-4 clearfix w-64">
      <div class="float-left w-1/2">
        <span class="text-left"><%= t('invoices.pdf.payment_terms') %>:</span>
      </div>
      <div class="float-left w-1/2 text-right">
        <span class="text-right">30 <%= t('invoices.pdf.days') %></span>
      </div>
    </div>
    <div class="mt-1 clearfix w-64">
      <div class="float-left w-1/2">
        <span class="text-left"><%= t('invoices.pdf.due_date') %>:</span>
      </div>
      <div class="float-left w-1/2 text-right">
        <span class="text-right"><%= @invoice.due_date %></span>
      </div>
    </div>
  </div>
  <div class="float-left w-1/3 pr-10 mt-8">
    <div class="clearfix w-56 float-right">
      <span class="text-left"><%= link_to(@invoice.customer.name, customer_path(@invoice.customer)) %></span>
      <div class="">
        <span class="text-left"><%= @customer.street %></span>
      </div>
      <div class="">
        <span class="text-left"><%= @customer.zip_code %> <%= @customer.city %></span>
      </div>
    </div>
  </div>
</div>
<div class="clearfix float-left bg-orange-500 h-12 w-full mt-16 py-3 text-white font-bold">
  <div class="float-left w-2/5 pl-10">
    <%= t('invoices.pdf.task') %>
  </div>
  <div class="float-left text-center w-1/5">
    <%= t('invoices.pdf.hours') %>
  </div>
  <div class="float-left text-center w-1/5">
    <%= t('invoices.pdf.cost') %>
  </div>
  <div class="float-left text-right w-1/6">
    <%= t('invoices.pdf.linetotal') %>
  </div>
</div>
<% @invoice.tasks.each do |task| %>
  <div class="clearfix float-left h-12 w-full py-3 <%= cycle('bg-white', 'bg-gray-200') %>">
    <div class="float-left w-2/5 pl-10">
      <p class="text-base"><%= task.title %></p>
    </div>
    <div class="float-left text-center w-1/5">
      <%= task.hours %>
    </div>
    <div class="float-left text-center w-1/5">
      999,00 kr
    </div>
    <div class="float-left text-right w-1/6">
      <%= number_to_currency(total = task.hours * 999) %>
    </div>
  </div>
<% end %>
<div class="clearfix float-left w-full border-t border-gray-700 mt-6 text-lg">
  <div class="w-3/5 float-left">
  </div>
  <div class="clearfix float-right w-2/5 mt-8">
    <div class="w-full px-2">
      <div class="float-left w-1/2">
        <span class="text-left"><%= t('invoices.pdf.subtotal') %>:</span>
      </div>
      <div class="float-left w-1/2 text-right">
        <span class="text-right font-medium"><%= number_to_currency(@invoice.amount) %></span>
      </div>
    </div>
    <div class="w-full clearfix float-left mt-6 px-2">
      <div class="float-left w-1/2">
        <span class="text-left"><%= t('invoices.pdf.tax') %> (<%= t('invoices.pdf.25%') %>):</span>
      </div>
      <div class="float-left w-1/2 text-right">
        <span class="text-right font-medium"><%= number_to_currency(@invoice.tax) %></span>
      </div>
    </div>
    <div class="w-full clearfix float-left mt-6 py-3 px-2 bg-gray-200  border-t-2 border-orange-600">
      <div class="float-left w-1/2">
        <span class="text-left font-bold"><%= t('invoices.pdf.total') %>:</span>
      </div>
      <div class="float-left w-1/2 text-right">
        <span class="text-right font-bold"><%= number_to_currency(@invoice.total) %></span>
      </div>
    </div>
  </div>
</div>
