<div class="">
  <div class="hidden px-6 border-b-2 rounded-t lg:block">
    <div class="flex w-full py-4 text-sm font-semibold text-gray-900 uppercase">
      <div class="flex w-1/4 xl:w-1/3">
        Task
      </div>
      <div class="flex w-1/4 xl:w-1/5">
        Date
      </div>
      <div class="w-1/5 xl:w-1/5">
        Cost
      </div>
      <div class="w-1/6 xl:w-1/6">
        Hours
      </div>
      <div class="w-1/6 xl:w-1/6">
        Total
      </div>
      <div class="flex justify-center w-4 md:justify-start">
      </div>
    </div>
  </div>
  <div id="tasks-table" class="px-4 lg:px-6 lg:py-4 xl:px-6">
    <%= render("invoices/tasks/table", invoice: invoice, tasks: tasks) %>
  </div>
  <div class="flex items-center justify-between px-6 py-4 border-t border-gray-300">
    <div class="">
      <div class="mr-2">
        <%= render('invoices/tasks/modal', invoice: invoice, tasks: new_tasks) %>
      </div>
    </div>
    <div id="invoice-amount" class="font-medium text-gray-800">
      <%= invoice_amount(invoice.amount) %>
    </div>
  </div>
</div>
