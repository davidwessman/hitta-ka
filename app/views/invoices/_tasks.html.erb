<div class="mt-4 lg:hidden">
  <div class="w-full flex flex-wrap mb-4">
    <div class="w-11/12 flex justify-between">
      <div>
        <p class="text-sm font-semibold text-blue-900">
          Slutbesiktning
        </p>
        <p class="text-xs text-blue-900">
          3 x 990,00 kr
        </p>
        <p class="text-xs text-blue-900">
          Description
        </p>
      </div>
      <div>
        <span class="text-sm font-semibold text-blue-900">
          2.970,00 kr
        </span>
      </div>
    </div>
    <div class="w-1/12 flex items-center justify-center">
      <div class="flex text-blue-500 text-sm items-center justify-center ml-4">
        <%= icon('fas', 'edit') %>
      </div>
    </div>
    <div class="w-11/12 flex justify-between mt-4">
      <div>
        <p class="text-sm font-semibold text-blue-900">
          Slutbesiktning
        </p>
        <p class="text-xs text-blue-900">
          3 x 990,00 kr
        </p>
        <p class="text-xs text-blue-900">
          Description
        </p>
      </div>
      <div>
        <span class="text-sm font-semibold text-blue-900">
          2.970,00 kr
        </span>
      </div>
    </div>
    <div class="w-1/12 flex items-center justify-center">
      <div class="flex text-blue-500 text-sm items-center justify-center ml-4">
        <%= icon('fas', 'edit') %>
      </div>
    </div>
    <div class="w-full flex justify-end mt-4">
      <div class="">
        <button
          class="py-1 px-2 w-full shadow-md no-underline rounded bg-blue-600 text-white font-bold text-sm hover:text-white hover:bg-blue-400 focus:outline-none active:shadow-none">
          <%= icon('fas', 'plus', class: 'mr-1') %>
          <%= t('.add_task') %>
        </button>
      </div>
    </div>
  </div>
</div>
<div class="hidden lg:block">
  <div class="border-b-2 rounded-t px-10">
    <div class="w-full flex text-sm uppercase font-semibold text-gray-700 py-6">
      <div class="w-1/3 lg:w-1/3 flex border-r border-white">
        Task
      </div>
      <div class="w-1/3 xl:w-1/5 flex border-r border-white">
        Date
      </div>
      <div class="w-1/12 lg:w-1/6 xl:w-1/5 hidden lg:flex border-r border-white">
        Cost
      </div>
      <div class="w-1/12 lg:w-1/6 xl:w-1/6 hidden lg:flex border-r border-white">
        Hours
      </div>
      <div class="w-1/12 lg:w-1/6 xl:w-1/12 hidden lg:flex border-r border-white">
        Total
      </div>
      <div class="w-4flex justify-center md:justify-start">
      </div>
    </div>
  </div>
  <div class="px-10 py-4">
    <% tasks.each do |task| %>
    <%= render("invoices/task_row", invoice: invoice, task: task) %>
    <% end %>
  </div>
  <div class="py-6 border-t border-gray-300 flex items-center justify-between px-10">
    <div class="">
      <div id="form-tasks" class="mr-2">
        <%= render('form_tasks', invoice: @invoice, tasks: @new_tasks) %>
      </div>
    </div>
    <div class="text-gray-800 font-medium">
      Total amount: <span class="text-green-500 font-semibold">999,00kr</span>
    </div>
  </div>
</div>
