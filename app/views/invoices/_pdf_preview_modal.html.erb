<div x-data="{ preview: false }" data-turbolinks-permanent>
  <button @click="preview = true" class="btn btn-blue">
    <%= t(".preview") %>
  </button>
  <div x-show="preview" class="px-8 overflow-y-auto bg-gray-900" style="background-color: rgba(0,0,0,0.3)"
    x-transition:enter="transition ease-out duration-300" x-transition:enter-start="transform opacity-0 scale-100"
    x-transition:enter-end="transform opacity-100 scale-100"
    class="absolute right-0 w-56 mt-2 shadow-lg origin-top-right rounded-md"
    :class="{ 'absolute inset-0 z-50 flex items-center justify-center': preview }">
    <div x-show="preview" @click.away="preview = false"
      class="relative items-center justify-center border border-gray-500 rounded-md transform scale-50 md:scale-75">
      <div class="mx-auto bg-white border border-gray-400 rounded">
        <div class="relative m-10 a4">
          <%= render('pdf_header') %>
          <div class="flex-grow">
            <%= render('pdf') %>
          </div>
          <div class="absolute bottom-0 w-full">
            <%= render('pdf_footer') %>
            <div class="flex items-center justify-between flex-grow mr-4 -mb-4">
              <div class="transform scale-125">
                <button @click="preview = false" class="text-sm font-bold text-red-600 uppercase hover:text-red-300">
                  <%= t(".close") %>
                </button>
              </div>
              <div class="flex items-center transform scale-125">
                <div class="mr-2">
                  <%= link_to(t('.download'), customer_invoice_path(@invoice.customer, format: :pdf),
                class: "px-3 py-2 text-xs md:text-sm shadow-md no-underline rounded bg-gray-500 text-white font-bold hover:text-white hover:bg-gray-400 focus:outline-none active:shadow-none") %>
                </div>
                <button class="w-20 px-2 py-2 text-xs normal-case md:w-24 md:text-sm btn btn-blue">
                  <%= t('.send') %> <%= icon('fas', 'envelope-open', class: "ml-2") %>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div
        class="absolute top-0 right-0 flex items-center justify-center w-5 h-5 mt-2 mr-2 font-bold text-white bg-gray-900 rounded cursor-pointer hover:bg-gray-700 md:hover:bg-red-400 md:bg-red-600 md:w-8 md:h-8 md:rounded-full md:-mt-4 md:-mr-4"
        @click="preview = false">
        <svg class="w-3 h-3 md:h-5 md:w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </div>
    </div>
  </div>
</div>
