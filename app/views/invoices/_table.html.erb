<% filtered ||= false %>
<% projects ||= [] %>
<% customer ||= nil %>
<div class="px-2 pb-4 lg:px-0 mt-4 lg:mt-2">
  <div class="bg-white border border-gray-400 shadow-md">
    <div class="w-full flex justify-between items-center h-16 border-b border-gray-400 px-4">
      <div class="flex">
        <div class="w-20 h-16 px-3 mr-2 -mb-px flex justify-center items-center border-b-2 border-orange-600 text-orange-600 font-semibold">
          <%= t('.active') %>
        </div>
        <div class="w-20 h-16 px-3 mr-2 -mb-px flex justify-center items-center text-gray-700 hover:font-semibold hover:text-orange-500">
          <%= t('.archived') %>
        </div>
        <div class="w-20 h-16 px-3 mr-2 -mb-px flex justify-center items-center text-gray-700 hover:font-semibold hover:text-orange-500">
          <%= t('.all') %>
        </div>
      </div>
    </div>
    <div class="w-full">
      <div class="border-b-2 bg-gray-200">
        <div class="w-full flex py-4">
          <div class="w-20 md:w-24 flex justify-center items-center">
            <input class="mr-2 leading-tight" type="checkbox">
          </div>
          <div class="w-full flex">
            <div class="w-1/3 lg:w-1/6 flex">
              <span class="uppercase text-sm font-semibold text-blue-900">
                <%= t('.project') %>
              </span>
            </div>
            <div class="w-1/3 lg:w-1/6 flex">
              <span class="uppercase text-sm font-semibold text-blue-900">
                <%= t('.invoice_no') %>
              </span>
            </div>
            <div class="w-1/6 hidden lg:flex">
              <span class="uppercase text-sm font-semibold text-blue-900">
                <%= t('.created') %>
              </span>
            </div>
            <div class="w-1/6 hidden lg:flex">
              <span class="uppercase text-sm font-semibold text-blue-900">
                <%= t('.amount') %>
              </span>
            </div>
            <div class="w-1/3 lg:w-1/6 flex justify-center md:justify-start">
              <span class="uppercase text-sm font-semibold text-blue-900">
                <%= t('.due_date') %>
              </span>
            </div>
            <div class="w-1/3 lg:w-1/6 flex justify-center md:justify-start">
              <span class="uppercase text-sm font-semibold text-blue-900">
                <%= t('.status') %>
              </span>
            </div>
          </div>
          <div class="w-16 hidden md:flex items-center">
          </div>
        </div>
      </div>
      <%= render("row") %>
      <div class="px-3 bg-white flex flex-col xs:flex-row items-end justify-center">
        <div class="px-2 align-middle inline-flex flex items-center py-4">

        </div>
      </div>
    </div>
  </div>
</div>
