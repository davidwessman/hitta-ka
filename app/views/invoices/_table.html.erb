<% invoices ||= [] %>
<% pagy ||= nil %>
<% customer ||= nil %>
<% show_filters = true if show_filters == nil %>
<div class="px-2 pb-4 lg:px-0">
  <div class="bg-white border border-gray-300 shadow-md">
    <% if show_filters %>
      <div class="flex-grow flex justify-between items-center h-16 border-b border-gray-300 px-4">
        <div class="flex">
          <%= invoice_status_button(:all, params[:status], object: customer) %>
          <%= invoice_status_button(:paid, params[:status], object: customer) %>
          <%= invoice_status_button(:unpaid, params[:status], object: customer) %>
        </div>
      </div>
    <% end %>
    <div class="flex-grow">
      <div class="border-b bg-gray-100">
        <div class="flex-grow flex py-4">
          <div class="px-2 sm:px-4 xl:px-6 flex justify-center items-center">
            <div class="w-8 md:w-10">
            </div>
          </div>
          <div class="flex-grow flex uppercase text-xs md:text-sm font-semibold text-blue-900">
            <div class="w-1/3 lg:w-1/6">
              <%= Invoice.human_attribute_name(:customer) %>
            </div>
            <div class="w-1/6 hidden lg:flex">
              <%= Invoice.human_attribute_name(:invoice_nbr) %>
            </div>
            <div class="w-1/6 hidden lg:flex">
              <%= Invoice.human_attribute_name(:invoice_date) %>
            </div>
            <div class="w-1/3 lg:w-1/6 flex">
              <%= Invoice.human_attribute_name(:amount) %>
            </div>
            <div class="w-1/3 lg:w-1/6 flex justify-start">
              <%= Invoice.human_attribute_name(:due_date) %>
            </span>
          </div>
          <div class="w-1/6 lg:w-1/6 hidden lg:flex">
            <%= Invoice.human_attribute_name(:status) %>
          </div>
        </div>
        <div class="w-1/6 lg:w-1/6 flex lg:hidden uppercase text-xs md:text-sm font-semibold text-blue-900">
          <%= Invoice.human_attribute_name(:status) %>
        </div>
      </div>
    </div>
    <% if invoices.any? %>
      <% invoices.each do |invoice| %>
        <%= render('invoices/row', invoice: invoice) %>
      <% end %>
    <% else %>
      <div class="mx-auto text-center font-bold text-xl">
        Empty empty empty
      </div>
    <% end %>
    <div class="px-3 bg-white flex flex-col xs:flex-row items-end justify-center">
      <div class="px-2 align-middle inline-flex flex items-center py-4">
        <%= render("pagy/nav", pagy: @pagy) if @pagy.present? %>
      </div>
    </div>
  </div>
</div>
</div>
