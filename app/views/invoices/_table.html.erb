<% invoices ||= [] %>
<% pagy ||= nil %>
<% customer ||= nil %>
<% show_filters = true if show_filters == nil %>
<div class="px-2 pb-4 lg:px-0">
  <div class="bg-white border border-gray-300 shadow-md">
    <% if show_filters %>
      <div class="flex items-center justify-between flex-grow h-16 px-4 border-b border-gray-300">
        <div class="flex">
          <%= invoice_status_button(:all, params[:status], object: customer) %>
          <%= invoice_status_button(:paid, params[:status], object: customer) %>
          <%= invoice_status_button(:unpaid, params[:status], object: customer) %>
        </div>
      </div>
    <% end %>
    <div class="flex-grow">
      <div class="bg-gray-100 border-b">
        <div class="flex flex-grow py-4">
          <div class="flex items-center justify-center px-2 sm:px-4 xl:px-6">
            <div class="w-8 md:w-10">
            </div>
          </div>
          <div class="flex flex-grow text-xs font-semibold text-blue-900 uppercase md:text-sm">
            <div class="w-1/3 lg:w-1/6">
              <%= Invoice.human_attribute_name(:customer) %>
            </div>
            <div class="hidden w-1/6 lg:flex">
              <%= Invoice.human_attribute_name(:invoice_nbr) %>
            </div>
            <div class="hidden w-1/6 lg:flex">
              <%= Invoice.human_attribute_name(:invoice_date) %>
            </div>
            <div class="flex w-1/3 lg:w-1/6">
              <%= Invoice.human_attribute_name(:amount) %>
            </div>
            <div class="flex justify-start w-1/3 lg:w-1/6">
              <%= Invoice.human_attribute_name(:due_date) %>
            </span>
          </div>
          <div class="hidden w-1/6 lg:w-1/6 lg:flex">
            <%= Invoice.human_attribute_name(:status) %>
          </div>
        </div>
        <div class="flex w-1/6 text-xs font-semibold text-blue-900 uppercase lg:w-1/6 lg:hidden md:text-sm">
          <%= Invoice.human_attribute_name(:status) %>
        </div>
      </div>
    </div>
    <% if invoices.any? %>
      <% invoices.each do |invoice| %>
        <%= render('invoices/row', invoice: invoice) %>
      <% end %>
    <% else %>
      <div class="mx-auto text-xl font-bold text-center">
        Empty empty empty
      </div>
    <% end %>
    <div class="flex flex-col items-end justify-center px-3 bg-white xs:flex-row">
      <div class="flex inline-flex items-center px-2 py-4 align-middle">
        <%= render("pagy/nav", pagy: @pagy) if @pagy.present? %>
      </div>
    </div>
  </div>
</div>
</div>
