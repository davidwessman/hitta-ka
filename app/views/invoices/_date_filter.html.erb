<div x-show="date_filter" class="absolute z-50 mt-2 rounded" x-transition:enter="transition ease-out duration-100"
  x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100"
  x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100"
  x-transition:leave-end="transform opacity-0 scale-95">
  <div class="w-56 p-3 bg-white border border-gray-400 rounded">
    <div class="flex flex-wrap items-center w-full">
      <div class="flex flex-wrap">
        <label class="mb-1 text-sm font-semibold text-gray-900"><%= t('.from') %>:</label>
        <div class="relative w-full">
          <span class="absolute inset-y-0 left-0 flex items-center pl-1 text-orange-500">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </span>
          <input placeholder="2020-02-02" class="h-8 py-2 pl-6 pr-4 text-sm border-gray-400 form-input date-picker">
        </div>
      </div>
      <div class="flex flex-wrap mt-2">
        <label class="mb-1 text-sm font-semibold text-gray-900"><%= t('.to') %>:</label>
        <div class="relative w-full">
          <span class="absolute inset-y-0 left-0 flex items-center pl-1 text-orange-500">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </span>
          <input placeholder="2020-02-02" class="h-8 py-2 pl-6 pr-4 text-sm border-gray-400 form-input date-picker">
        </div>
      </div>
      <button
        class="flex items-center justify-center w-full py-1 mt-2 mt-4 text-center text-gray-900 normal-case border border-gray-300 btn hover:bg-orange-500 hover:text-white hover:border-transparent">
        <span class=""><%= t('.today') %></span>
      </button>
      <button
        class="flex items-center justify-center w-full py-1 mt-4 text-center text-gray-900 normal-case border border-gray-300 btn hover:bg-orange-500 hover:text-white hover:border-transparent">
        <span class=""><%= t('.last_week') %></span>
      </button>
      <button
        class="flex items-center justify-center w-full py-1 mt-4 text-center text-gray-900 normal-case border border-gray-300 btn hover:bg-orange-500 hover:text-white hover:border-transparent">
        <span class=""><%= t('.last_month') %></span>
      </button>
      <button
        class="flex items-center justify-center w-full py-1 mt-4 text-center text-gray-900 normal-case border border-gray-300 btn hover:bg-orange-500 hover:text-white hover:border-transparent">
        <span class=""><%= t('.last_year') %></span>
      </button>
    </div>
  </div>
</div>
