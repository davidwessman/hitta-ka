<div class="flex border-b border-gray-300">
  <%= link_to(customer_invoice_path(invoice.customer, invoice), class: 'flex-grow flex py-3 hover:bg-orange-200') do %>
    <div class="px-2 sm:px-4 xl:px-6 flex justify-center items-center">
      <div class="rounded-full h-8 w-8 md:h-10 md:w-10 bg-orange-500 inline-flex
                      items-center justify-center text-white font-bold text-xs md:text-sm lg:text-base">
        <i class="fas fa-lg fa-file-invoice"></i>
      </div>
    </div>
    <div class="flex-grow flex items-center text-xs sm:text-sm xl:text-base">
      <div class="w-1/3 lg:w-1/6 pr-2">
        <p class=""><%= invoice.customer.name %></p>
        <p class="text-xs md:text-sm text-gray-700 opacity-75">#<%= invoice.customer.id %></p>
      </div>
      <div class="w-1/3 lg:w-1/6 hidden lg:flex pr-2">
        <p class="text-blue-500">#<%= invoice.invoice_nbr %></p>
      </div>
      <div class="w-1/6 hidden lg:inline-block pr-2">
        <p class=""><%= l(invoice.invoice_date) if invoice.invoice_date.present? %></p>
      </div>
      <div class="w-1/3 lg:w-1/6 pr-2">
        <p class="">
          <% if (invoice.amount > 0) %>
            <%= number_to_currency(invoice.amount) %>
          <% end %>
        </p>
      </div>
      <div class="w-1/3 lg:w-1/6 flex pr-2">
        <p class="<%= invoice.past_due? ? 'text-red-500' : 'text-green-500'%> "><%= invoice.due_date %></p>
      </div>
      <div class="w-1/6 lg:w-1/6 hidden lg:flex">
        <%= invoice_tag(invoice.status) %>
      </div>
    </div>
    <div class="w-1/6 lg:w-1/6 flex lg:hidden items-center">
      <div class="pl-4 md:pl-5 flex items-center">
        <%= invoice_tag_mobile(invoice.status) %>
      </div>
    </div>
  <% end %>
  <div class="hidden md:flex items-center relative inline-block" @click.away="edit_dropdown = false"
    x-data="{ edit_dropdown: false }">
    <div class="cursor-pointer h-16 w-10 xl:w-16 -ml-12 xl:-ml-20 flex items-center justify-center"
      @click="edit_dropdown = !edit_dropdown" @click="edit_dropdown = true">
      <svg class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" />
      </svg>
    </div>
    <%= render('invoices/edit_dropdown', invoice: invoice) %>
  </div>
</div>
