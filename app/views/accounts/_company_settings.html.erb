<h2 class="text-gray-900 text-2xl font-medium"><%= t('.company_settings') %></h2>
<div class="w-full xl:w-3/4 flex flex-col mt-4">
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
      <%= form.label(:name, class: "tracking-wide leading-none text-gray-700 font-semibold mb-1 lg:mb-2") %>
      <%= form.text_field(:name, id: 'name',
      class: "appearance-none block w-full
              text-gray-900 border border-gray-500
              rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
              focus:border-blue-600 mt-2") %>
    </div>
    <div class="w-full md:w-1/2 px-3">
      <%= form.label(:vat, class: "tracking-wide leading-none text-gray-700 font-semibold mb-1 lg:mb-2") %>
      <%= form.text_field(:vat, id: 'vat',
      class: "appearance-none block w-full
              text-gray-900 border border-gray-500
              rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
              focus:border-blue-600 mt-2") %>
    </div>
  </div>
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
      <%= form.label(:email, class: "tracking-wide leading-none text-gray-700 font-semibold mb-1 lg:mb-2") %>
      <%= form.text_field(:email, id: 'email',
      class: "appearance-none block w-full
              text-gray-900 border border-gray-500
              rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
              focus:border-blue-600 mt-2") %>
    </div>
    <div class="w-full md:w-1/2 px-3">
      <%= form.label(:website, class: "tracking-wide leading-none text-gray-700 font-semibold mb-1 lg:mb-2") %>
      <div class="flex">
        <div
          class="w-24 mt-2 bg-gray-100 rounded-l border-t border-l border-b border-gray-500 flex items-center justify-center">
          <span class="text-gray-600">
            https://
            </svg>
          </span>
        </div>
        <%= form.text_field(:website, id: 'website',
                  class: " appearance-none block w-full
                  text-gray-900 border border-gray-500
                  rounded-r py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
                  focus:border-blue-600 mt-2") %>
      </div>
    </div>
  </div>
</div>
<div class="w-full xl:w-3/4 flex flex-col">
  <div class="-mx-3 md:flex">
    <div class="md:w-1/2 px-3">
      <%= form.label(:phone, class: "tracking-wide leading-none text-gray-700 font-semibold mb-1 lg:mb-2") %>
      <%= form.text_field(:phone, id: 'phone',
      class: "appearance-none block w-full
              text-gray-900 border border-gray-500
              rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
              focus:border-blue-600 mt-2") %>
    </div>
  </div>
  <div class="mt-8 flex items-center text-gray-900 font-medium">
    <span class="inline-flex flex items-center">
      <span class="text-xl mr-2">
        <%= t('.address') %>
      </span>
      <svg class="h-5 w-5 lg:h-6 lg:w-6 -mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
      </svg>
    </span>
  </div>
  <div class="-mx-3 md:flex my-6">
    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
      <%= form.label(:street, class: "tracking-wide leading-none text-gray-700 font-semibold mb-1 lg:mb-2") %>
      <%= form.text_field(:steet, id: 'street',
      class: "appearance-none block w-full
              text-gray-900 border border-gray-500
              rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
              focus:border-blue-600 mt-2") %>
    </div>
    <div class="w-full md:w-1/2 px-3">
      <%= form.label(:zip_code, class: "tracking-wide leading-none text-gray-700 font-semibold mb-1 lg:mb-2") %>
      <%= form.text_field(:zip_code, id: 'zip_code',
      class: "appearance-none block w-full
              text-gray-900 border border-gray-500
              rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
              focus:border-blue-600 mt-2") %>
    </div>
  </div>
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
      <%= form.label(:city, class: "tracking-wide leading-none text-gray-700 font-semibold mb-1 lg:mb-2") %>
      <%= form.text_field(:city, id: 'city',
      class: "appearance-none block w-full
              text-gray-900 border border-gray-500
              rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
              focus:border-blue-600 mt-2") %>
    </div>
    <div class="w-full md:w-1/2 px-3">
      <%= form.label(:country, class: "tracking-wide leading-none text-gray-700 font-semibold mb-1 lg:mb-2") %>
      <%= form.text_field(:country, id: 'country',
      class: "appearance-none block w-full
              text-gray-900 border border-gray-500
              rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
              focus:border-blue-600 mt-2") %>
    </div>
  </div>
</div>
