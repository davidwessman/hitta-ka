<h2 class="text-gray-900 text-2xl font-medium"><%= t('.company_settings') %></h2>
<div class="w-full xl:w-3/4 flex flex-col my-4">
	<div class="-mx-3 md:flex mb-6">
		<div class="md:w-1/2 px-3 mb-6 md:mb-0">
			<label class="text-gray-700 text-xs font-semibold uppercase">
				<%= t('.name') %>
			</label>
			<input
				class="h-10 appearance-none block w-full bg-white text-gray-700 border border-gray-400 rounded-md py-1 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 mt-2"
				id="grid-first-name" type="text">
		</div>
		<div class="w-full md:w-1/2 px-3">
			<label class="text-gray-700 text-xs font-semibold uppercase">
				<%= t('.vat_number') %>
			</label>
			<input
				class="h-10 appearance-none block w-full bg-white text-gray-700 border border-gray-400 rounded-md py-3 px-4 leading-tight focus:outline-none focus:bg-white mt-2"
				id="grid-last-name" type="text">
		</div>
	</div>
	<div class="-mx-3 md:flex mb-6">
		<div class="md:w-1/2 px-3 mb-6 md:mb-0">
			<label class="text-gray-700 text-xs font-semibold uppercase">
				<%= t('.email') %>
			</label>
			<input
				class="h-10 appearance-none block w-full bg-white text-gray-700 border border-gray-400 rounded-md py-1 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 mt-2"
				id="grid-first-name" type="text">
		</div>
		<div class="w-full md:w-1/2 px-3">
			<label class="text-gray-700 text-xs font-semibold uppercase">
				<%= t('.website') %>
			</label>
			<div class="w-full flex flex-no-wrap">
				<div class="w-24 h-10 mt-2 bg-gray-100 rounded-l-md border border-gray-300 flex items-center justify-center">
					<span class="text-gray-600">
						https://
					</span>
				</div>
				<input
					class="h-10 block w-full bg-white text-gray-700 border-t border-r border-b rounded-r-md py-3 px-4 leading-tight focus:outline-none focus:bg-white mt-2"
					id="grid-last-name" type="text">
			</div>
		</div>
	</div>
	<div class="-mx-3 md:flex">
		<div class="md:w-1/2 px-3">
			<label class="text-gray-700 text-xs font-semibold uppercase">
				<%= t('.phone') %>
			</label>
			<input
				class="h-10 appearance-none block w-full bg-white text-gray-700 border border-gray-400 rounded-md py-1 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 mt-2"
				id="grid-first-name" type="text">
		</div>
	</div>
	<div class="mt-8 flex items-center text-gray-900 font-medium">
		<span class="inline-flex flex items-center ">
			<span class="text-xl mr-2">
				<%= t('.address') %>
			</span>
			<svg class="h-5 w-5 lg:h-6 lg:w-6 -mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
					d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
			</svg>
		</span>
	</div>
	<div class="-mx-3 md:flex my-6">
		<div class="md:w-1/2 px-3 mb-6 md:mb-0">
			<label class="text-gray-700 text-xs font-semibold uppercase">
				<%= t('.street_&_nr') %>
			</label>
			<input
				class="h-10 appearance-none block w-full bg-white text-gray-700 border border-gray-400 rounded-md py-1 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 mt-2"
				id="grid-first-name" type="text">
		</div>
		<div class="w-full md:w-1/2 px-3">
			<label class="text-gray-700 text-xs font-semibold uppercase">
				<%= t('.city') %>
			</label>
			<input
				class="h-10 appearance-none block w-full bg-white text-gray-700 border border-gray-400 rounded-md py-3 px-4 leading-tight focus:outline-none focus:bg-white mt-2"
				id="grid-last-name" type="text">
		</div>
	</div>
	<div class="-mx-3 md:flex mb-6">
		<div class="md:w-1/2 px-3 mb-6 md:mb-0">
			<label class="text-gray-700 text-xs font-semibold uppercase">
				<%= t('.zip_code') %>
			</label>
			<input
				class="h-10 appearance-none block w-full bg-white text-gray-700 border border-gray-400 rounded-md py-1 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 mt-2"
				id="grid-first-name" type="text">
		</div>
		<div class="w-full md:w-1/2 px-3">
			<label class="text-gray-700 text-xs font-semibold uppercase">
				<%= t('.country') %>
			</label>
			<input
				class="h-10 appearance-none block w-full bg-white text-gray-700 border border-gray-400 rounded-md py-1 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 mt-2"
				id="grid-first-name" type="text">
		</div>
	</div>
	<div class="mt-4 mb-6 flex items-center text-gray-900 font-medium">
		<span class="inline-flex flex items-center ">
			<span class="text-xl mr-2">
				<%= t('.logotype') %>
			</span>
			<svg class="h-5 w-5 lg:h-6 lg:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
			</svg>
		</span>
	</div>
	<div class="flex items-center">
		<div class="rounded-full h-16 w-16 bg-blue-400 flex mr-3 items-center justify-center">
			<p class="text-white font-bold text-xs"><%= t('.logo') %></p>
		</div>
		<div class="items-start ml-4">
			<%= link_to(new_project_path, class: 'bg-blue-600 border-blue-600 border hover:bg-blue-500 hover:border-blue-500 py-2 px-2 rounded-md text-white font-medium flex items-center') do %>
				<svg class="h-5 w-5 font-bold text-gray-100 inline-block mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 17a5 5 0 01-.916-9.916 5.002 5.002 0 019.832 0A5.002 5.002 0 0116 17m-7-5l3-3m0 0l3 3m-3-3v12"/>
				</svg>
				<%= t('.upload') %>
			<% end %>
		</div>
	</div>
</div>
