<%= form_with(model: current_user, url: account_path, local: true, class: "w-full") do |form| %>
  <h2 class="text-gray-900 text-2xl font-medium"><%= t('.localization_settings') %></h2>
  <div class="w-full flex flex-col mt-4">
    <div class="-mx-3 md:flex mb-6">
      <div class="md:w-1/2 px-3 mb-6 md:mb-0">
        <div class="relative">
          <%= form.label(:language, class: "form-label lg:mb-2") %>
          <%= form.select(:languages, ['Swedish', 'English'],
                          {}, id: 'languages',
                          class: 'form-input mt-2') %>
          <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                        flex items-center px-2 text-gray-700">
            <%= render('application/icons/arrow_down') %>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-4 flex items-center text-gray-900 font-medium">
      <span class="inline-flex flex items-center">
        <span class="text-xl mr-2">
          <%= t('.currency') %>
        </span>
        <%= render('application/icons/dollar_sign') %>
      </span>
    </div>
    <div class="-mx-3 md:flex my-6">
      <div class="md:w-1/2 px-3 mb-6 md:mb-0">
        <div class="relative">
          <%= form.label(:currency, class: "form-label lg:mb-2") %>
          <%= form.select(:currency, ['Swedish Krona', 'US Dollar', 'Euro'],
                          {}, id: 'currency',
                          class: 'form-input mt-2') %>
          <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                        flex items-center px-2 text-gray-700">
            <%= render('application/icons/arrow_down') %>
          </div>
        </div>
      </div>
      <div class="w-full md:w-1/2 px-3">
        <div class="relative">
          <%= form.label(:format, class: "form-label lg:mb-2") %>
          <%= form.select(:format, ['1.000,00 kr', '1.000,00 SEK'],
                          {}, id: 'format',
                          class: 'form-input mt-2') %>
          <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                        flex items-center px-2 text-gray-700">
            <%= render('application/icons/arrow_down') %>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-4 flex items-center text-gray-900 font-medium">
      <span class="inline-flex flex items-center">
        <span class="text-xl mr-2">
          <%= t('.currency') %>
        </span>
        <%= render('application/icons/dollar_sign') %>
      </span>
    </div>
    <div class="-mx-3 md:flex my-6">
      <div class="md:w-1/2 px-3 mb-6 md:mb-0">
        <div class="relative">
          <%= form.label(:date_format, class: "form-label lg:mb-2") %>
          <%= form.select(:date_format, [''],
                          {}, id: 'date_format',
                          class: 'form-input mt-2') %>
          <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                        flex items-center px-2 text-gray-700">
            <%= render('application/icons/arrow_down') %>
          </div>
        </div>
      </div>
      <div class="w-full md:w-1/2 px-3">
        <div class="relative">
          <%= form.label(:time_format, class: "form-label lg:mb-2") %>
          <%= form.select(:time_format, [''],
                          {}, id: 'time_format',
                          class: 'form-input mt-2') %>
          <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                        flex items-center px-2 text-gray-700">
            <%= render('application/icons/arrow_down') %>
          </div>
        </div>
      </div>
    </div>
    <div class="-mx-3 md:flex mb-6">
      <div class="md:w-1/2 px-3 mb-6 md:mb-0">
        <div class="relative">
          <%= form.label(:time_zone, class: "form-label lg:mb-2") %>
          <%= form.select(:time_zone, [''],
                          {}, id: 'time_zone',
                          class: 'form-input mt-2') %>
          <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                        flex items-center px-2 text-gray-700">
            <%= render('application/icons/arrow_down') %>
          </div>
        </div>
      </div>
      <div class="w-full md:w-1/2 px-3">
        <%= form.label(:hours, class: "form-label lg:mb-2") %>
        <div class="flex flex-grow items-center mt-3">
          <div class="w-1/2">
            <%= form.radio_button(:hours, 'twelve_hours',
            class: 'mt-2') %>
            <span class="ml-2">24 hour time</span>
          </div>
          <div class="ml-5">
            <%= form.radio_button(:hours, 'twelve_hours',
            class: 'mt-2') %>
            <span class="ml-2">12 hour time</span>
          </div>
        </div>
      </div>
    </div>
    <div class="-mx-3 md:flex mb-6">
      <div class="md:w-1/2 px-3 mb-6 md:mb-0">
        <div class="relative">
          <%= form.label(:first_day_of_the_week, class: "form-label lg:mb-2") %>
          <%= form.select(:first_day_of_the_week, ['', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'],
                          {}, id: 'first_day_of_the_week',
                          class: 'form-input mt-2') %>
          <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                        flex items-center px-2 text-gray-700">
            <%= render('application/icons/arrow_down') %>
          </div>
        </div>
      </div>
      <div class="w-full md:w-1/2 px-3">
        <div class="relative">
          <%= form.label(:first_month_of_the_year, class: "form-label lg:mb-2") %>
          <%= form.select(:first_month_of_the_year, ['', 'January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
                          {}, id: 'first_month_of_the_year',
                          class: 'form-input mt-2') %>
          <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                        flex items-center px-2 text-gray-700">
            <%= render('application/icons/arrow_down') %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
