<% content_for(:sidebar) do %>
  <%= render('application/account_menu', current: :account) %>
<% end %>
<% content_for(:header_title) do %>
  <%= t('.title') %>
<% end %>
<div class="flex-grow grid grid-cols-2 gap-4">
  <div
    class="col-span-2 grid grid-cols-8 py-4 p-2 sm:p-3 xl:px-8 xl:py-10 bg-blue-100">
    <div x-data="{ tab: 'projects' }" class="col-span-8">
      <div class="flex justify-between">
        <div>
          <h1 class="text-2xl sm:text-4xl font-semibold text-gray-900 leading-none"><%= current_user.name %> -
            <%= current_user.organisations.first %></h1>
          <div class="mt-3">
            <span class=""><%= current_user.email %></span><span class="ml-8">123 123 123 123</span> <span
              class="ml-8">https://website.com</span>
          </div>
        </div>
        <div class="flex items-start text-white">
          <div class="flex flex-wrap-reverse justify-end">
            <%= link_to(new_project_path, class: 'btn btn-blue normal-case text-base mt-2 sm:mt-0') do %>
              <%= t('.new_project') %>
            <% end %>
            <%= link_to(new_customer_path, class: 'btn btn-green normal-case text-base ml-3') do %>
              <%= t('.new_customer') %>
            <% end %>
          </div>
        </div>
      </div>
      <%= render("stats") %>
    </div>
  </div>
  <div class="grid col-span-2 grid-cols-2 gap-4 px-8">
    <%= render("projects", projects: @projects) %>
    <%= render("tasks") %>
    <%= render("invoices", invoices: @invoices) %>
  </div>
</div>
