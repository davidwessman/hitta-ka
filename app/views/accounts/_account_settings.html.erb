<h2 class="text-gray-900 text-2xl font-medium"><%= t('.account_settings') %></h2>
<div class="w-full flex flex-col mt-4">
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
      <%= form.label(:first_name, class: "tracking-wide leading-none text-gray-700 font-semibold mb-1 lg:mb-2") %>
      <%= form.text_field(:first_name, id: 'first_name',
      class: "appearance-none block w-full
              text-gray-900 border border-gray-500
              rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
              focus:border-blue-600 mt-2") %>
    </div>
    <div class="w-full md:w-1/2 px-3">
      <%= form.label(:last_name, class: "tracking-wide leading-none text-gray-700 font-semibold mb-1 lg:mb-2") %>
      <%= form.text_field(:last_name, id: 'last_name',
      class: "appearance-none block w-full
              text-gray-900 border border-gray-500
              rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
              focus:border-blue-600 mt-2") %>
    </div>
  </div>
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
      <%= form.label(:phone, class: "tracking-wide leading-none text-gray-700 font-semibold mb-1 lg:mb-2") %>
      <div class="flex">
        <div
          class="w-12 mt-2 bg-gray-100 rounded-l border-t border-l border-b border-gray-500 flex items-center justify-center">
          <span class="text-gray-700">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M16 3h5m0 0v5m0-5l-6 6M5 3a2 2 0 00-2 2v1c0 8.284 6.716 15 15 15h1a2 2 0 002-2v-3.28a1 1 0 00-.684-.948l-4.493-1.498a1 1 0 00-1.21.502l-1.13 2.257a11.042 11.042 0 01-5.516-5.517l2.257-1.128a1 1 0 00.502-1.21L9.228 3.683A1 1 0 008.279 3H5z" />
            </svg>
          </span>
        </div>
        <%= form.text_field(:phone, id: 'phone',
                  class: "appearance-none block w-full
                  text-gray-900 border border-gray-500
                  rounded-l-none rounded-r py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
                  focus:border-blue-600 mt-2") %>
      </div>
    </div>
    <div class="md:w-1/2 px-3">
      <%= form.label(:email, class: "tracking-wide leading-none text-gray-700 font-semibold mb-1 lg:mb-2") %>
      <div class="flex">
        <div
          class="w-12 mt-2 bg-gray-100 rounded-l border-t border-l border-b border-gray-500 flex items-center justify-center">
          <span class="text-gray-700">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </span>
        </div>
        <%= form.text_field(:email, id: 'email',
                  class: " appearance-none block w-full
                  text-gray-900 border border-gray-500
                  rounded-l-none rounded-r py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
                  focus:border-blue-600 mt-2") %>
      </div>
    </div>
  </div>
  <div class="xl:w-3/4">
    <div class="mt-8 flex items-center text-gray-900 font-medium">
      <span class="inline-flex flex items-center ">
        <span class="text-lg mr-2">
          <%= t('.change_password') %>
        </span>
        <svg class="h-5 w-5 lg:h-6 lg:w-6 -mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
      </span>
    </div>
    <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center mt-8">
      <div class="w-full lg:w-1/2 pr-2 text-gray-700 font-semibold">
        <%= t('.current_password') %>
      </div>
      <div class="w-full">
        <div class="relative">
          <%= form.text_field(:current_password, id: 'current_password',
        class: "appearance-none block w-full
                text-gray-900 border border-gray-500
                rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
                focus:border-blue-600 mt-2") %>
        </div>
      </div>
    </div>
    <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center">
      <div class="w-full lg:w-1/2 pr-2 text-gray-700 font-semibold">
        <%= t('.new_password') %>
      </div>
      <div class="w-full">
        <div class="relative">
          <%= form.text_field(:new_password, id: 'new_password',
        class: "appearance-none block w-full
                text-gray-900 border border-gray-500
                rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
                focus:border-blue-600 mt-2") %>
        </div>
      </div>
    </div>
    <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center">
      <div class="w-full lg:w-1/2 pr-2 text-gray-700 font-semibold">
        <%= t('.confirm_password') %>
      </div>
      <div class="w-full">
        <div class="relative">
          <%= form.text_field(:confirm_password, id: 'confirm_password',
        class: "appearance-none block w-full
                text-gray-900 border border-gray-500
                rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
                focus:border-blue-600 mt-2") %>
        </div>
      </div>
    </div>
  </div>
</div>
