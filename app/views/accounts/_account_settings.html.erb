<%= form_with(model: current_user, url: account_path, local: true, class: "w-full") do |form| %>
  <h2 class="text-gray-900 text-2xl font-medium"><%= t('.account_settings') %></h2>
  <div class="w-full flex flex-col mt-4">
    <div class="-mx-3 md:flex mb-6">
      <div class="md:w-1/2 px-3 mb-6 md:mb-0">
        <%= form.label(:name, class: "form-label lg:mb-2") %>
        <%= form.text_field(:name, id: 'name',
        class: "form-input mt-2") %>
      </div>
      <div class="md:w-1/2 px-3">
        <%= form.label(:email, class: "form-label lg:mb-2") %>
        <div class="flex">
          <div
            class="w-12 mt-2 bg-gray-100 rounded-l border-t border-l border-b border-gray-500 flex items-center justify-center">
            <span class="text-gray-700">
              <%= render('application/icons/email') %>
            </span>
          </div>
          <%= form.text_field(:email, id: 'email',
                    class: "form-input rounded-l-none rounded-r mt-2") %>
        </div>
      </div>
    </div>
  </div>
  <div class="w-full flex flex-col">
    <div class="mt-8 mb-4 flex items-center text-gray-900 font-medium">
      <span class="inline-flex flex items-center ">
        <span class="text-lg mr-2">
          <%= t('.change_password') %>
        </span>
        <svg class="h-5 w-5 lg:h-6 lg:w-6 -mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
      </span>
    </div>
    <div class="-mx-3 md:flex mb-6">
      <div class="md:w-1/2 px-3 mb-6 md:mb-0">
        <%= form.label(:current_password, class: "form-label lg:mb-2") %>
        <%= form.password_field(:current_password, id: 'current_password', class: "form-input mt-2") %>
        <% if current_user.errors[:current_password].any? %>
          <ul class="list-disc list-inside text-red-800">
            <% current_user.errors[:current_password].each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class="md:w-1/2 px-3">
        <%= form.label(:new_password, class: "form-label lg:mb-2") %>
        <%= form.password_field(:new_password, id: 'new_password', class: "form-input mt-2") %>
        <% if current_user.errors[:new_password].any? %>
          <ul>
            <% current_user.errors[:new_password].each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
  <div class="w-full flex pt-3 border-t border-gray-400">
    <div class="w-full flex justify-end items-center">
      <div class="">
        <%= link_to(t('.cancel'), settings_account_path, class: "w-full px-3 text-blue-600 uppercase font-bold text-sm hover:text-blue-300") %>
      </div>
      <div class="ml-2">
        <%= form.submit(t('.save'), class: "btn btn-blue") %>
      </div>
    </div>
  </div>
<% end %>
